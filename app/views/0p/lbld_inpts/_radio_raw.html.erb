	<%#= form.label(token, label) unless label.blank? %>
<fieldset>
	<% radio_list.each_with_index do |radio, indice| %>
		<% if indice == 0 %>
			<%= form.radio_button token, radio, checked: true %>
		<% else %>
			<%= form.radio_button token, radio %>
		<% end %>
 		<%= form.label "#{token.to_s}_#{radio.downcase}".to_sym, radio %>
	<% end %>
</fieldset>