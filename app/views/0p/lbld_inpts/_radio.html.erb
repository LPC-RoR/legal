<% id ||= nil %>
<% dsply ||= nil %>
<div class="mb-3" id="<%=id%>" style2="display: <%=dsply%>;">

	<%= form.label(token, label) unless label.blank? %>
	<% radio_list.each_with_index do |radio, indice| %>
		<div class="form-check">
			<% if indice == 0 %>
			    <%= form.radio_button token, radio, class: "form-check-input" %>
			    <%= form.label token, radio, value: radio, class: "form-check-label" %>
			<% else %>
			    <%= form.radio_button token, radio, class: "form-check-input" %>
			    <%= form.label token, radio, value: radio, class: "form-check-label" %>
			<% end %>
		</div>
 	<% end %>

</div>