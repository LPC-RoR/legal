<% clss 		||= ClssTtl.clss_dflt %>
<% dir 			||= clss.to_s %>
<% ttl			||= nil %>
<% hide_gly 	||= false %>
<% hide_lnks	||= false %>
<% ownr      	||= nil %>
<% blngs     	||= nil %>
<div class="row <%= ClssTtl.clss_str(clss) %>" style="<%= ClssTtl.styl_str(clss) %>" >
	<div class="col-9">
		<% unless hide_gly %>
			<i class="bi bi-<%= controller_icon[cntrllr(source)] %>"></i>
		<% end %>
		<% if ttl %>
			<%= ttl %>
		<% elsif prtl?(source, dir, 'objt') %>
			<%= render partial: prtl_name(source, dir, 'objt'), locals: {ownr: ownr, blngs: blngs} %>
		<% else %>
			<%= to_name(source).pluralize %>
		<% end %>
	</div>
	<div class="col-3 text-end">
		<% unless hide_lnks %>
			<% if prtl?(source, dir, 'lnks') %>
				<%= render partial: prtl_name(source, dir, 'lnks'), locals: {ownr: ownr, blngs: blngs} %>
			<% elsif prtl?(source, dir, 'lft_lnks') %>
				<%= render partial: prtl_name(source, dir, 'lft_lnks'), locals: {ownr: ownr, blngs: blngs} %>
				<%= render partial: '0p/tbl/lnk_new', locals: {source: source, ownr: ownr, blngs: blngs}%>
			<% else %>
				<%= render partial: '0p/tbl/lnk_new', locals: {source: source, ownr: ownr, blngs: blngs}%>
			<% end %>
		<% end %>
	</div>
</div>

<% if prtl?(source, dir, 'cllps') %>
	<%= render partial: prtl_name(source, dir, 'cllps'), locals: {ownr: ownr, blngs: blngs} %>
<% end %>

<% if prtl?(source, dir, 'bttm') %>
	<%= render partial: prtl_name(source, dir, 'bttm'), locals: {ownr: ownr, blngs: blngs} %>
<% end %>