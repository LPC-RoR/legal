<% shdw    = shdw ? true : false %>
<% typ     ||= 'tr' %>
<% ordr    ||= false %>
<% crud    ||= nil %>
<% hnt     ||= true %>
<% new_hnt ||= false %>

<% if @coleccion[str_cntrllr(source)].empty? and new_hnt %>
  <%= render partial: "0p/tbl/new_hnt", locals: {c: str_cntrllr(source)} %>
<% else  %>

  <%= render partial: '0p/tabla/paginate', locals: {c: str_cntrllr(source), location: 'arriba'} %>

  <%= render partial: "0p/tbl/lst", locals: {clccn: @coleccion[str_cntrllr(source)], shdw: shdw, ordr: ordr, crud: crud, typ: typ} %>

  <%= render partial: '0p/tabla/paginate', locals: {c: str_cntrllr(source), location: 'abajo'} if @coleccion[str_cntrllr(source)].count > 15 %>
<% end %>