<!-- LOGO SOBRE EL MENÃš -->
<%= image_tag("logo.jpg", class: "img-responsive", id: "logo") if  File.exist?("app/assets/images/logo.jpg") %>

<!--NAVBAR-->
<nav class="navbar navbar-expand-lg navbar-dark bg-<%=config[:color][:navbar]%>">
  <div class="container-fluid">
    <!-- LOGO NAVBAR -->
    <% if File.exist?("app/assets/images/#{config[:app][:logo_navbar]}") %>
      <a class="navbar-brand" href="<%=config[:app][:home]%>">
        <%= image_tag(config[:app][:logo_navbar], height: "40", class: "img-responsive", id: "navbar-logo") %>
      </a>
    <% end %>

    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">

      <!-- MENU PRINCIPAL -->
      <ul class="navbar-nav mr-auto mb-2 mb-lg-0">
        <!-- MENU CAPITAN -->
        <% unless nomenu?(controller_name) %>
          <% menu.each do |item| %>
            <% if item[1] == 'pull_down_item' %>
              <%= render partial: '0p/navbar/dropdown', locals: {nombre: item[0], drop_items: dropdown_items(item[0])} %>
            <% else %>
              <%= render partial: '0p/navbar/btn', locals: {nombre: item[0].capitalize, link: item[1], active: item_active(item[1]), delete: false, gly: item[3]} if display_item_menu?(item[0], item[2]) %>
            <% end %>
          <% end %>

          <%= render partial: 'capitan/drop_down/ddown_principal' %>
          <%= render partial: '0p/navbar/dd_enlaces' if usuario_signed_in? and config[:menu][:dd_enlaces] %>
        <% end %>
        
      </ul>

      <ul class="navbar-nav mr-auto mb-2 mb-lg-0">
        <% unless nomenu?(controller_name) %>
            <% menu_base.each do |item| %>
              <% if item[1] == 'pull_down_item' %>
                <%= render partial: '0p/navbar/dropdown', locals: {nombre: item[0], drop_items: dropdown_items(item[0])} %>
              <% else %>
                <%= render partial: '0p/navbar/btn', locals: {nombre: item[0].capitalize, link: item[1], active: item_active(item[1]), delete: false, gly: item[3]} if display_item_menu?(item[0], item[2]) %>
              <% end %>
            <% end %>
        <% end %>
      </ul>

      <!-- OPERACION GENERAL -->
      <ul class="navbar-nav me-auto mb-2 mb-lg-0">

        <!-- AYUDA -->
        <%= render partial: '0p/navbar/btn', locals: {nombre: nil, link: ayuda_app_recursos_path, active: (controller_name == 'app_recursos' and action_name == 'ayuda'), delete: false, gly: 'question-square'} if config[:menu][:ayuda] %>

        <% if usuario_signed_in? %>

          <!-- MENSAJE REGISTRADO -->
          <%= render partial: '0p/navbar/btn', locals: {nombre: nil, link: app_mensajes_path, active: controller_name == 'contactos', delete: false, gly: 'envelope'} if config[:menu][:contacto] %>

          <!-- SALIR -->
          <%= render partial: '0p/navbar/btn', locals: {nombre: nil, link: destroy_usuario_session_path, active: false, delete: true, gly: 'door-open'} %>

        <% else %>

          <!-- MENSAJE ANONIMO -->
          <%= render partial: '0p/navbar/btn', locals: {nombre: nil, link: new_app_mensaje_path, active: controller_name == 'contactos', delete: false, gly: 'envelope'} if config[:menu][:contacto] %>

          <!-- INGRESO -->
          <%= render partial: '0p/navbar/btn', locals: {nombre: nil, link: new_usuario_session_path, active: (controller_name == 'sessions'), delete: false, gly: 'person'} %>
          <!-- REGISTRO -->
          <%= render partial: '0p/navbar/btn', locals: {nombre: nil, link: new_usuario_registration_path, active: (controller_name == 'registrations'), delete: false, gly: 'person-plus'} %>
          
        <% end %>

      </ul>
    </div>
  </div>
</nav>
</br>
