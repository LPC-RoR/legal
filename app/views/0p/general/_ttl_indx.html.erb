<div class="ttl_app">
	<div class="ttl_ttl">
		<%= render partial: '0p/general/gly', locals: {gly: controller_icon[cntrllr(cntrllr)]} %>
		<% if prtl?(cntrllr, 'indx', "objt") %>
			<%= render partial: prtl_name(cntrllr, 'indx', "objt"), locals: {ownr: ownr} %>
		<% else %>
			<%= ttl unless ttl.blank? %>
		<% end %>
	</div>
	<div class="ttl_lnks">
		<% if prtl?(cntrllr, 'indx', "lnks") %>
			<%= render partial: prtl_name(cntrllr, 'indx', "lnks"), locals: {ownr: ownr} %>
		<% elsif ownr.blank? %>
			<%= render partial: '0p/tabla/lnk_new', locals: {lnk: "/#{cntrllr(cntrllr)}/new", tltp: "Agrega #{c_to_name(cntrllr(cntrllr))}"} %>
		<% end %>
	</div>
</div>
<% if prtl?(cntrllr, 'indx', "dsply") %>
	<%= render partial: prtl_name(cntrllr, 'indx', "dsply"), locals: {ownr: ownr} %>
<% end %>