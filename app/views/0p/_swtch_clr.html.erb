<small>
<% unless objeto.send(tkn) == 'success' %>
	<%= render layout: '0p/tltp_lnk', locals: {lnk: "/#{objeto.class.name.tableize}/#{objeto.id}/swtch_clr?tkn=#{tkn}&clr=success", tltp: ttl[0], data: {turbo_method: :post}} do %>
		<i class="bi bi-circle-fill text-success"></i>
	<% end %>
<% end %>
<% unless objeto.send(tkn) == 'warning' %>
	<%= render layout: '0p/tltp_lnk', locals: {lnk: "/#{objeto.class.name.tableize}/#{objeto.id}/swtch_clr?tkn=#{tkn}&clr=warning", tltp: ttl[1], data: {turbo_method: :post}} do %>
		<i class="bi bi-circle-fill text-warning"></i>
	<% end %>
<% end %>
<% unless objeto.send(tkn) == 'danger' %>
	<%= render layout: '0p/tltp_lnk', locals: {lnk: "/#{objeto.class.name.tableize}/#{objeto.id}/swtch_clr?tkn=#{tkn}&clr=danger", tltp: ttl[2], data: {turbo_method: :post}} do %>
		<i class="bi bi-circle-fill text-danger"></i>
	<% end %>
<% end %>
</small>