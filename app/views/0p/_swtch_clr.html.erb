<small>
<% unless objeto.send(tkn) == 'success' %>
	<%= link_to "/#{objeto.class.name.tableize}/#{objeto.id}/swtch_clr?tkn=#{tkn}&clr=success", title: ttl[0], 'data-toggle' => 'tooltip', 'data-placement' => 'right' do %>
		<i class="bi bi-circle-fill text-success"></i>
	<% end %>
<% end %>
<% unless objeto.send(tkn) == 'warning' %>
	<%= link_to "/#{objeto.class.name.tableize}/#{objeto.id}/swtch_clr?tkn=#{tkn}&clr=warning", title: ttl[1], 'data-toggle' => 'tooltip', 'data-placement' => 'right' do %>
		<i class="bi bi-circle-fill text-warning"></i>
	<% end %>
<% end %>
<% unless objeto.send(tkn) == 'danger' %>
	<%= link_to "/#{objeto.class.name.tableize}/#{objeto.id}/swtch_clr?tkn=#{tkn}&clr=danger", title: ttl[2], 'data-toggle' => 'tooltip', 'data-placement' => 'right' do %>
		<i class="bi bi-circle-fill text-danger"></i>
	<% end %>
<% end %>
</small>