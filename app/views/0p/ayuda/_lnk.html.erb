<%#= render partial: '0p/ayuda/lnk', locals: {objt: objeto, tltp: nil} %>

<% objt ||= nil %>
<% tltp ||= nil %>
<% objt_name ||= 'Objeto sin nombre' %>
<% unless objt.hlp_ayudas.empty? %>
	<%= link_to "#", class: "btn", data: { bs_toggle: "offcanvas", bs_target: "##{objt.class.name.tableize}#{objt.id}" } do %>
		<i class="bi bi-caret-right"></i>
		<span data-toggle="tooltip" title="<%=tltp%>"><%= objt.hlp_ayudas.first.hlp_ayuda %></span>
	<% end %>
<% else %>
	<div class="ps-3">
		<i class="bi bi-caret-right"></i>
		<%= objt_name %>
	</div>
<% end %>