  <div class="card-img-overlay">
	<a href="#" class="btn btn-primary">Leer</a>
  </div>
  <div class="card-body">
    <h6 class="card-title card-sec-title">
       <%= link_to articulo.blg_articulo, articulo, class: 'link-invisible' %></h6>
    <small><i><p class="text-muted"><%= articulo.autor%></br><%= dma(articulo.created_at) %></p></i></small>
  </div>
</div>