<div class="card rounded-0 h-100">
    <%= image_tag @principal.imagen.half.url, class: "card-img img-fluid rounded-0" unless @principal.imagen.blank? %>
  <div class="card-img-overlay">
  <small><a href="#" class="btn btn-primary">Leer</a></small>
  </div>
  <div class="card-body">
    <h4 class="card-title">
      <%= link_to @principal.blg_articulo, @principal, class: 'link-invisible' %>
    </h4>
    <p class="card-text">
      <%= sanitize simple_format(@principal.descripcion) %>
    </p>
    <div class="row">
      <div class="col-6">
        <small><i><p class="text-muted"><%= @principal.autor %></p></i></small>
      </div>
      <div class="col-6">
        <small><i><p class="text-muted" align='right'><%= dma(@principal.created_at) %></p></i></small>
      </div>
    </div>
  </div>
</div>
