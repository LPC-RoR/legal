<!DOCTYPE html>
<html>
  <head>
    <title><%=config[:app][:nombre]%></title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag  'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag "link_styles" %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag('util.js') %>
    <%= favicon_link_tag asset_path('favicon.ico') if File.exist?("app/assets/images/favicon.ico") %>


    <!-- font-family: 'Barlow', sans-serif; -->
    <!-- font-family: 'Lexend', sans-serif; -->
    <!-- font-family: 'Raleway', sans-serif; -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Barlow&family=Lexend:wght@100;200;300;400;500;600;700;800;900&family=Raleway:ital,wght@0,200;0,400;0,600;1,200;1,400;1,600&display=swap" rel="stylesheet">

</head>

  <body>

    <!-- OVER -->
    <% if partial?('layouts', nil, 'over') %>

      <%= render(layout: "0p/general/margen_div", locals: { cols: config[:margen][(publico? ? :public_over : :user_over)], style_str: 'margin-top: .5em; margin-bottom: .5em', container_class: 'app_over' }) do %>
        <%= render partial: 'layouts/over' %>
      <% end %>

    <% end %>

    <!-- NAVBAR+ -->
    <% if config[:layout][:menu] %>

      <%= render(layout: "0p/general/margen_div", locals: { cols: config[:margen][(publico? ? :public_menu : :user_menu)], style_str: 'margin-top: .5em; margin-bottom: .5em', container_class: 'app_menu' }) do %>
        <%= render partial: '0p/navbar/navbar' %>
      <% end %>

    <% end %>

    <!-- BODY -->
    <%= render(layout: "0p/general/margen_div", locals: { cols: config[:margen][(publico? ? :public_body : :user_body)], style_str: 'margin-top: .5em; margin-bottom: .5em', container_class: 'app_body' }) do %>
      <%= render partial: 'layouts/app' %>
    <% end %>

    <%= render partial: 'layouts/footer' %>
    <!-- TEMA_AYUDA -->
    <%# if objeto_tema_ayuda('foot').present? %>
      <%#= render partial: 'help/tema_ayudas/partials/elem_foot', locals: {elem: objeto_tema_ayuda('foot')} %>
    <%# end %>
    <%= render partial: 'home/h_imagenes/partials/imagen', locals: {nombre: 'Foot', size: config[:image][:foot][:size]} if foot? %>
  </body>
</html>
