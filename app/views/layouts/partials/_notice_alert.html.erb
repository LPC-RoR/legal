<% if notice or alert %>
	<% if notice %>
		<!--div class="alert alert-success" role="alert" style="margin: 2px 0 2px 0;color: blue;"-->
		<div class="px-3 py-1 border border-primary border-opacity-50 rounded-pill" role="alert" style="margin: 2px 0 2px 0;color: blue;">
		  <i class="bi bi-bell"></i> <%= notice %>
		</div>
	<% end %>

	<% if alert %>
		<!--div class="alert alert-danger" role="alert" style="margin: 2px 0 2px 0;color: red;"-->
		<div class="px-3 py-1 border border-danger border-opacity-50 rounded-pill" role="alert" style="margin: 2px 0 2px 0;color: red;">
		  <i class="bi bi-bell"></i> <%= alert %>
		</div>
	<% end %>
<% end %>