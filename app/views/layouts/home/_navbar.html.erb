<%= render layout: '0p/collapse/dsply', locals: {label: 'Navbar', objeto: nil} do %>

	<div class="row py-2" style="padding-left: 1%;padding-right: 1%;font-size: 13px;background-color: white;">
		<div class="col-9 navbar_lnk">
			<%= render layout: '0p/tltp_lnk', locals: {lnk: root_path, tltp: 'Home'} do %>
				<% if controller_name == 'hlp_ayudas' %>
					<%= image_tag 'logo/logo_90.png' %>
				<% else %>
					<%= image_tag 'home/logo_30.png' %>
				<% end %>
			<% end %>
		</div>
		<div class="col-3 pt-1 text-end navbar_lnk">
				<span class="pe-2">
					<%= render layout: '0p/tltp_lnk', locals: {lnk: '/hlp_ayudas/bnvnd', tltp: 'Ayuda', target: '_blank'} do %>
						<i class="bi bi-question-circle"></i> Ayuda
					<% end %>
				</span>

				<% if usuario_signed_in? %>
				  <span class="ms-4"><%= render partial: 'usuarios/lnks/lnk_salir' %></span>
				<% else %>
				  <span class="ms-2"><%= render partial: 'usuarios/lnks/lnk_ingrs' %></span>

				  <%# Sacamos el registro porque ahora todo se resuelve desde la AppNomina %>
				  <!--span class="ms-2"><%#= render partial: 'usuarios/lnks/lnk_rgstr' %></span-->
				<% end %>
		</div>
	</div>

<% end %>