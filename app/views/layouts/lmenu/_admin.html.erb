<div class="mt-1 p-3 rounded text-center shadow-sm text-white crdncls">
	<h4><i class="bi bi-person-circle"></i></h4>
		<b>
		<%= render layout: '0p/layout/tooltip_link', locals: {link: edit_usuario_registration_path, tooltip: 'Editar mi usuario'} do %>
			<%= perfil_activo.email %>
		<% end %>
		</b>
	</br>
	<small>
		<i class="bi bi-person-fill"></i> 
		<%= dog? ? 'dog' : ( admin? ? 'admin' : 'usuario' ) %>
		<i class="bi bi-dot"></i> 
		<% if dog? %>
			<%= render layout: '0p/layout/tooltip_link', locals: {link: "/app_recursos/usuarios", tooltip: "Lista de usuarios"} do %>
				<i class="bi bi-people"></i>
				Usuarios
			<% end %>
		<% else %>
			<%= tipo_usuario %>
		<% end %>
	</br>
		<%= render partial: '0capitan/lmenu/enlaces_drpdwn', locals: {toggle: 'Enlaces', menus: v_enlaces} %>
	</small>
</div>