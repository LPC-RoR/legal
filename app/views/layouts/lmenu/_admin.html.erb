<div class="mt-1 p-3 rounded text-center shadow-sm text-white crdncls">
	<h4><i class="bi bi-person-circle"></i></h4>
		<b>
		<%= render layout: '0p/tltp_lnk', locals: {lnk: edit_usuario_registration_path, tltp: 'Editar mi usuario'} do %>
			<%= perfil_activo.email %>
		<% end %>
		</b>
	</br>
	<small>
		<i class="bi bi-person-fill"></i> 
		<%= dog? ? 'dog' : ( admin? ? 'admin' : 'usuario' ) %>
		<i class="bi bi-dot"></i> 
		<% if dog? %>
			<%= render layout: '0p/tltp_lnk', locals: {lnk: "/app_recursos/usuarios", tltp: "Lista de usuarios"} do %>
				<i class="bi bi-people"></i>
				Usuarios
			<% end %>
		<% else %>
			<%= tipo_usuario %>
		<% end %>
	</br>
		<%= render partial: 'layouts/lmenu/drpdwn_lnks' %>
	</small>
</div>