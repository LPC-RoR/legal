<!-- app/views/layouts/mailers/base.html.erb -->
<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">

    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400&display=swap" rel="stylesheet">

    <title><%= message.subject %></title>

    <style>

      .open-sans-regular {
        font-family: "Open Sans", sans-serif;
        font-weight: 400;
      }

      /* Estilos base inline para máxima compatibilidad */
      body { 
        margin: 0; 
        padding: 0; 
        background: #f3f4f6;
        font-family: 'Open Sans', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
        font-weight: 400;
      }

      .wrapper { max-width: 600px; margin: 0 auto; background: #ffffff; }
      .header { padding: 24px; text-align: left; border-bottom: 1px solid #e5e7eb; }
      .header img { max-height: 48px; }
      /* Logo del footer */
      .footer-logo {
        margin-bottom: 16px;
      }
      
      .footer-logo img {
        max-height: 32px;
        opacity: 0.6;
      }
      
      .body { padding: 32px 24px; }
      .footer { 
        padding: 24px; 
        background: #f9fafb; 
        border-top: 1px solid #e5e7eb; 
        font-size: 12px; 
        color: #6b7280; 
        text-align: center; 
      }
      
      <%# Variante sutil para platform %>
      <% if @mail_context == :platform %>
        .platform-badge { background: #1e40af; color: white; padding: 4px 12px; font-size: 11px; display: inline-block; margin-bottom: 8px; }
      <% end %>
    </style>
  </head>
  <body>
    <div class="wrapper">
      <div class="header">
        <% if @mail_context == :platform %>
          <span class="platform-badge">ADMIN</span>
        <% end %>
        
        <%# SOLUCIÓN: Usar image_url en lugar de image_tag %>
        <% if @head_url.present? %>
          <img src="<%= @head_url.to_s.strip %>" alt="<%= brand_name %>" style="max-height: 48px;">
        <% end %>
      </div>
      
      <div class="body">
        <%= yield %>
      </div>
      
      <div class="footer">
        <% if @sign_url.present? %>
          <div class="footer-logo">
            <img src="<%= @sign_url %>" alt="<%= brand_name %>" style="max-height: 32px; opacity: 0.6;">
          </div>
        <% end %>
        <%= footer_html %>
        
        <% if support_email.present? %>
          <p style="margin-top: 12px;">
            <%= mail_to support_email, t('mailers.contact_support') %>
          </p>
        <% end %>
      </div>
    </div>
  </body>
</html>