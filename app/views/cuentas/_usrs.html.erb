<div class="px-2">
  <table class="table">
    <thead>
      <tr>
        <th>Email</th>
        <th>Rol actual</th>
        <th>Cambiar rol</th>
      </tr>
    </thead>
    <tbody>
      <% @usuarios.each do |usuario| %>
        <tr id="usuario_<%= usuario.id %>">
          <td><%= usuario.email %></td>
          <td id="usuario_<%= usuario.id %>_rol">
            <%= usuario.role || 'â€”' %>
          </td>
          <td>
            <%= form_with url: update_rol_empresa_path(@objeto, usuario_id: usuario.id),
                          method: :patch,
                          data: { turbo: true } do |f| %>
              <%= f.select :rol,
                           options_for_select(Usuario::LBSF_ROLES, usuario.role),
                           {},
                           { onchange: 'this.form.requestSubmit()',
                             class: 'form-select form-select-sm' } %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>