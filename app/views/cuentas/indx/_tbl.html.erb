<% typ  ||= 'tr' %>
<% crud ||= nil %>

<% if typ == 'tr' %>
  <%= render layout: '0p/tbl/wrap_tr' do %>
    <% @coleccion[cntrllr(source)].each do |objt| %>
      <%= render partial: "0p/tbl/tr", locals: {objt: objt, crud: crud} %>
    <% end %>
  <% end %>
<% else %>
    <% @coleccion[cntrllr(source)].each do |objt| %>
      <%= render partial: "0p/tbl/ln", locals: {objt: objt, crud: crud} %>
    <% end %>
<% end %>