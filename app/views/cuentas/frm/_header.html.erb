<%# cuentas/frm/header %>
<% sz 		  ||= 5 %>
<% fml   	  ||= false %>
<% text_acctn ||= action_name == 'new' ? (fml ? 'Nueva' : 'Nuevo') : 'Editar' %>
<div class="row px-3 pt-2 border border-dark-subtle border-5 rounded-pill fs-4 app_lnk">
	<div class="col-8">
		<h<%=sz%> class='text-<%=cfg_color[:app]%>'>

			<i class="bi bi-input-cursor-text"></i>
			<%= text_acctn %> 
			<% if prtl?(@objeto, 'frm', 'txt_objt') %>
				<%= render partial: prtl_name(@objeto, 'frm', 'txt_objt') %>
			<% elsif prtl?(@objeto, 'frm', 'txt_hdr') %>
				<%= render partial: prtl_name(@objeto, 'frm', 'txt_hdr') %>
			<% else %>
				<%= to_name(@objeto).downcase %>
			<% end %>

		</h<%=sz%>>
	</div>
	<div class="col-4 text-end">
		<h<%=sz%> class='text-<%=cfg_color[:app]%>'>
		<%= render layout: '0p/tltp_lnk', locals: {lnk: bck_path_krn_objt(@objeto), tltp: 'Volver'} do %>
			<i class="bi bi-arrow-left"></i>
		<% end %>				
		</h<%=sz%>>
	</div>
</div>