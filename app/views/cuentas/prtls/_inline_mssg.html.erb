<% txt ||= 'Sin texto' %>
<% lnk ||= nil %>
<% lnk_txt ||= 'Sin texto del link' %>
<% clr ||= 'primary' %>
<% gly ||= 'bug' %>

<div class="my-1 border border-<%=clr%> rounded-2 p-2 objt_lnk text-<%=clr%>" style="font-size: .8rem;line-height: 1.5;">
	<i class="bi bi-<%= gly %>"></i>
	<%= txt %>
	<% if lnk %>
		<%= link_to lnk do %>
			<i class="bi bi-box-arrow-up-right"></i> <%= lnk_txt %>
		<% end %>
	<% end %>
</div>
