<div class="g_cllps">
	<b>Agregar Nota</b>
	<%= form_for :form_nota, url: "/notas/agrega_nota?c=#{controller_name}&clss=#{clss}&oid=#{oid}" do |form| %>

		<%= render partial: '0p/form_fields/radio', locals: { form: form, token: :prioridad, radio_list: ['Información', 'Advertencia', 'Urgente'] } %>

		<%= render partial: '0p/form_fields/label', locals: { form: form, token: :fecha_gestion, label: 'Fecha Gestion' } %>
		<%= render partial: '0p/form_fields/date', locals: { form: form, token: :fecha_gestion } %>
		<%= render partial: '0p/form_fields/check_box', locals: { form: form, token: :sin_fecha_gestion, label: 'Sin fecha de Gestión' } %>

		<%= render partial: '0p/form_fields/label', locals: { form: form, token: :nota, label: 'Nota' } %>
		<%= render partial: '0p/form_fields/text', locals: { form: form, token: :nota } %>

		<button type="submit" class="btn btn-info">
		  <i class="bi bi-caret-right icon-white"></i>
		</button>

	<% end  %>
</div>