<div class="row m-0 px-1 py-1 bg-secondary-subtle rounded app_lnk" style="font-size: 10px;line-height: 1.2;">
	<div class="col">
		<%= render partial: '0p/clr_point', locals: {clr: objeto.prioridad} %>
		<%= render partial: '0p/clr_point', locals: {clr: 'primary'} unless objeto.realizado %>
		<i class="bi bi-dot"></i>

		<i class="bi bi-cone-striped text-<%= objeto.realizado ? 'muted' : objeto.prioridad%>"></i>
		<%= dma_hm(objeto.created_at) %>
		<i class="bi bi-dot"></i>

		<%= objeto.class.name %>
		<%= objeto.app_perfil.app_nomina_nombre %>

		<% if objeto.ownr.class.name == 'Causa' and controller_name == 'publicos' %>
			<%= objeto.ownr.causa %>
		<% end %>

	</div>
	<div class="col text-end">
		<%= render partial: '0p/swtch', locals: {objeto: objeto, tkn: 'realizado', stts: ['pendiente', 'realizada']} %>
		<i class="bi bi-dot"></i>
		<%= render partial: '0p/swtch_clr', locals: {objeto: objeto, tkn: 'prioridad', ttl: ['normal', 'mediana', 'urgente']} %>

		<i class="bi bi-dot"></i>

		<% if objeto.app_perfil.id == perfil_activo.id or admin? %>
			<%= render partial: '0p/tabla/links_e', locals: {objeto: objeto} %>
		<% end %>

	</div>
</div>