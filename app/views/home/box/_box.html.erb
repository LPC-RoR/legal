<% bg  ||= 'bg-light' %>
<% gly ||= 'circle-fill' %>
<% clr ||= 'primary' %>
<% ttl ||= 'Sin título' %>

<div class="container">
  <div class="position-relative border rounded-4 p-3 shadow-sm <%= bg %>">
    <!-- Pseudo-elemento para tapar el borde -->
    <div class="position-absolute top-0 start-0 translate-middle rounded-circle" style="
      width: 1.5rem;
      height: 1.5rem;
      background: <%= bg == 'bg-light' ? '#f8f9fa' : 'inherit' %>;
      border: 2px solid transparent;
      transform: translate(-50%, -50%);
    "></div>
    
    <!-- Ícono (se superpone al pseudo-elemento) -->
    <div class="position-absolute top-0 start-0 translate-middle">
      <i class="bi bi-<%= gly %> fs-2 text-<%= clr %>"></i>
    </div>
    
    <!-- Contenido -->
    <div class="ps-4">
      <h4 class="mb-3"><%= ttl %></h4>
      <p class="mb-0">
        <%= yield %>
      </p>
    </div>
  </div>
</div>