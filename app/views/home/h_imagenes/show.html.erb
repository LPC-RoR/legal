<h4><%= render partial: '0p/general/icon_text', locals: {gly: 'image', text: @objeto.nombre, clr: config[:color][:app]} %></h4>

<% @objeto.imagenes.order(created_at: :desc).each do |imagen| %>

	<div class="row">
		<div class="col-12 col-md-2">
			<% unless imagen.imagen.blank? %>
				<%= image_tag imagen.imagen.send('thumb').url, class: nil %></br>
			<% else %>
				Sin imagen
			<% end %>
		</div>
		<div class="col-12 col-md-8">
			<b class='text-muted'><%= imagen.nombre %></b></br>
			<% unless imagen.credito_imagen.blank? %>
				<small><small><%= imagen.credito_imagen %></small></small></br>
			<% end %>
		</div>
		<div class="col-12 col-md-2">
			<%= render partial: '0p/tabla/btns', locals: {a: 'index', objeto: imagen} %>
		</div>
	</div>
	<hr>
<% end %>

<%= render partial: '0p/tabla/ext_btn_nuevo', locals: {texto: m_to_name('AppImagen'), o: @objeto, c: 'app_imagenes', gly: 'plus-circle', delete: false} %>
