<%= render partial: '0capitan/general/app_ttl', locals: {c: 'h_imagenes', title: @objeto.nombre, link: "/app_imagenes/new=class_name =HImagen&objeto_id=#{@objeto.id}", tooltip: 'Agrega archivo imagen' } %>

<% @objeto.imagenes.order(created_at: :desc).each do |imagen| %>

	<div class="row">
		<div class="col-12 col-md-2">
			<% unless imagen.imagen.blank? %>
				<%= image_tag imagen.imagen.send('thumb').url, class: nil %></br>
			<% else %>
				Sin imagen
			<% end %>
		</div>
		<div class="col-12 col-md-8">
			<b class='text-muted'><%= imagen.nombre %></b></br>
			<% unless imagen.credito_imagen.blank? %>
				<small><small><%= imagen.credito_imagen %></small></small></br>
			<% end %>
		</div>
		<div class="col-12 col-md-2">
			<%= render partial: '0p/tabla/btns', locals: {a: 'index', objeto: imagen} %>
		</div>
	</div>
	<hr>
<% end %>