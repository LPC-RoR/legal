<div class="row">
	<div class="col-9">
		<i class="bi bi-bookmark-check"></i> 
		<small><%= objeto.tipo_causa %></small>
	</div>
	<div class="col-3" align='right'>
		<small><small><%= render partial: '0p/tabla/links_e', locals: {objeto: objeto} %></small></small>
	</div>	
</div>
<hr>
<small>
	<div class="text-info">
		Audiencias 
		<i class="bi bi-dot"></i> 
		<%= link_to "/tipo_causas/#{objeto.id}/audiencias/new" do %>
			<i class="bi bi-plus-circle"></i>
		<% end %>
	</div>

	<small>
	<div style='padding-left: 1em;'>
		<% objeto.audiencias.order(:orden).each do |audiencia| %>
			<div class="row">
			<%= render partial: 'audiencias/list/lobjeto', locals: {objeto: audiencia} %>
			</div>
		<% end %>
	</div>
	</small>

	<div class="text-info">
		Control documentos 
		<i class="bi bi-dot"></i> 
		<%= link_to "/control_documentos/new?clss=#{objeto.class.name}&oid=#{objeto.id}" do %>
			<i class="bi bi-plus-circle"></i>
		<% end %>
	</div>

	<small>
	<div style='padding-left: 1em;'>
		<% objeto.control_documentos.order(:orden).each do |c_doc| %>
				<%= render partial: 'repositorios/control_documentos/list/bjt', locals: {objeto: c_doc} %>
		<% end %>
	</div>
	</small>

	<div class="text-info">
		Variables 
		<i class="bi bi-dot"></i> 
		<%= link_to "/tipo_causas/#{objeto.id}/variables/new" do %>
			<i class="bi bi-plus-circle"></i>
		<% end %>
	</div>

	<small>
	<div style='padding-left: 1em;'>
		<% objeto.variables.order(:orden).each do |variable| %>
			<div class="row">
			<%= render partial: 'variables/list/lobjeto', locals: {objeto: variable} %>
			</div>
		<% end %>
	</div>
	</small>
</small>


