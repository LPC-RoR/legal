<div class="row">
	<div class="col-lg-6 col-xs-12">
		<%= render partial: 'capitan/layout/titulo_tabla', locals: {c: 'tar_tarifas', title: 'Tarifa', link_new: nil} %>

		<div class="shadow p-3 mb-3 bg-white rounded">

			<div class="text-info">
				Tarifa Asignada
				<%= render layout: '0p/collapse/link', locals: {label: 'AsignaTarifa', objeto: nil, tooltip: 'asigna'} do %>
					<i class="bi bi-arrow-bar-down"></i>
				<% end %>

				<%= render layout: '0p/collapse/display', locals: {label: 'AsignaTarifa', objeto: nil, tooltip: 'Tarifas'} do %>
					<%= render partial: 'causas/partials/sel_tarifas', locals: {objeto: objeto} %>
				<% end %>
			</div>

			<small class="text-muted">
			<% if @objeto.tar_tarifa.present? %>
				<%= link_to @objeto.tar_tarifa.tarifa, @objeto.tar_tarifa %> 
				<% if objeto.facturaciones.empty? %>
					<%= link_to "/tar_tarifas/#{@objeto.tar_tarifa.id}/desasigna?cid=#{objeto.id}" do %>
						<i class="bi bi-x-circle"></i>
					<% end %>
				<% end %>
				<%= render partial: 'tarifas/tar_tarifas/list/detalle_tarifa', locals: {objeto: @objeto.tar_tarifa} %>
			<% else %>
				Sin tarifa asignada
			<% end %>
			</small>

		<div class="row">
			<div class="col-lg-6 col-xs-12">
			</div>
			<div class="col-lg-6">
				<% if @objeto.tar_tarifa.blank? %>
				<% end %>
			</div>
		</div>
		</div>
	</div>
	<div class="col-lg-6">
		<%= render partial: 'capitan/layout/titulo_tabla', locals: {c: 'tar_valor_cuantias', title: 'CuantÃ­a', link_new: "/tar_valor_cuantias/new?class_name=#{objeto.class.name}&objeto_id=#{objeto.id}"} %>

		<% unless @coleccion['tar_valor_cuantias'].empty? %>
		<div class="shadow p-3 mb-3 bg-white rounded">
			<%= render partial: '0p/tabla/tabla', locals: {c: 'tar_valor_cuantias'} %>
		</div>
		<% end %>
	</div>
</div>