<div class="row">
	<div class="col-lg-4 col-xs-12">
		<%= render partial: 'capitan/layout/titulo_tabla', locals: {c: 'tar_uf_facturaciones', title: 'UF de cÃ¡lculo', link_new: "/tar_uf_facturaciones/new?class_name=#{objeto.class.name}&objeto_id=#{@objeto.id}" } %>

		<%= render partial: '0p/tabla/tabla', locals: {c: 'tar_uf_facturaciones'} %>

	</div>
	<div class="col-lg-8">

		<%= render partial: 'capitan/layout/titulo_tabla', locals: {c: 'tar_pagos', title: 'Despliegue tarifa', link_new: nil } %>

		<% objeto.tar_tarifa.tar_pagos.each do |pago| %>

			<div class="shadow p-3 mb-3 bg-white rounded">
				<%= render partial: 'causas/partials/despliega_pago', locals: {objeto: objeto, pago: pago} %>

				<!-- BOTON FACTURACION -->
				<% unless objeto.facturaciones.map {|facts| facts.facturable}.include?(pago.codigo_formula) %>
			    	<p><%= render partial: '0p/general/btn_proceso', locals: {texto: pago.tar_pago, gly: 'coin', link: "/tar_facturaciones/crea_facturacion?owner_class=#{objeto.class.name}&owner_id=#{objeto.id}&facturable=#{pago.codigo_formula}", clr: config[:color][:app], delete: false} unless pago.codigo_formula.blank? %>
					</p>
			    <% end %>
			</div>

		<% end %>

	</div>
</div>