<div class="titulo text-info">
  Causas <%#= 'Terminadas / Cerradas' if tipo.present? %>
</div>
<div class="row text_muted">
  <div class="col-lg-3">
    <%= render partial: 'causas/partials/sel_causas', locals: {estados: estados, tipos: tipos, tipo: tipo, estado: estado, path: path} %>
  </div>
  <div class="col-lg-9">
    <%# if @tipo.blank? %>
      <%= render partial: '0capitan/general/titulo_tabla', locals: {c: 'causas', title: "Causas en estado #{estado}", link_new: nil} %>
      <%= render partial: '0p/tabla/tabla', locals: {c: 'causas'} %>
    <%# else %>
      <%#= render partial: '0capitan/general/titulo_tabla', locals: {c: 'causas', title: "Asesorias del tipo #{tipo}", link_new: nil} %>
      <%#= render partial: '0p/tabla/tabla', locals: {c: 'asesorias'} %>
    <%# end %>
  </div>
</div>