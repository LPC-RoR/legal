<div class='row'>
	<div class='col-md-7'>

		<%= render partial: 'tarifas/partials/asigna_tarifa', locals: {objeto: @objeto} %>

		<% unless @objeto.tar_tarifa.blank? %>
			<%= render partial: '0p/general/gly_title_size', locals: {gly: 'coin', title: 'Facturación',size: 6} %>
			<%= render partial: '0p/tabla/tabla', locals: {c: 'tar_facturaciones'} %>

			<hr>

			<%= render partial: '0p/general/gly_title_size', locals: {gly: 'coin', title: 'UFs de facturación', size: 6} %>
			<%= render partial: '0p/tabla/tabla', locals: {c: 'tar_uf_facturaciones'} %>
			<%= render partial: '0p/tabla/btn_nuevo_o', locals: {c: 'tar_uf_facturaciones', o: @objeto} %>
		<% end %>

	</div>
	<div class='col-md-5'>
		<% if @objeto.tar_tarifa.present? %>
			<%= render partial: 'tarifas/partials/facturacion', locals: {objeto: @objeto} %>
		<% end %>
	</div>
</div>
