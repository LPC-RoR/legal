<div class="g_cllps">
	<%= form_for :monto_conciliacion, url: "/monto_conciliaciones/nuevo?cid=#{objeto.id}" do |form| %>

		<%= render partial: '0p/form_fields/label', locals: { form: form, token: :tipo, label: 'Tipo' } %>
		<%= render partial: '0p/form_fields/select', locals: { form: form, token: :tipo, sel_list: MontoConciliacion::TIPOS, label: nil } %></br>

		<%= render partial: '0p/form_fields/label', locals: { form: form, token: :fecha, label: 'Fecha' } %>
		<%= render partial: '0p/form_fields/date', locals: { form: form, token: :fecha } %>

		<%= render partial: '0p/form_fields/hidden', locals: { form: form, token: :causa_id } %>

		<%= render partial: '0p/form_fields/label', locals: { form: form, token: :monto, label: 'Monto' } %>
		<div class='form-inline'>
			<%= render partial: '0p/form_fields/number', locals: { form: form, token: :monto } %>

			<button type="submit" class="btn btn-info">
			  <i class="bi bi-caret-right icon-white"></i>
			</button>
		</div>
	<% end  %>
</div>