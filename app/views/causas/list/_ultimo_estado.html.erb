<%= render layout: '0p/collapse/display', locals: {label: 'NuevoEstado', objeto: objeto} do %>
	<%= render partial: 'causas/list/frm_estado', locals: {objeto: objeto} %>
<% end %>

<div class="g_cllps">
	<div class="ln_app">
		<div class="ln_nm">
			<%= objeto.estados.empty? ? 'Causa sin estados' : dma(objeto.estados.last.fecha) %>
		</div>
		<div class="ln_lnks">
			<%= render layout: '0p/collapse/link', locals: {label: 'NuevoEstado', objeto: objeto, tooltip: "Nuevo estado"} do %>
			 	<i class="bi bi-plus-circle"></i>
			<% end %>
		</div>
	</div>

	<% unless objeto.estados.empty? %>
		<div class="g_cllps">
			<%= render partial: '0p/tabla/links_e', locals: {objeto: objeto.estados.last} %>
			<%= objeto.estados.last.estado %>	
		</div>
	<% end %>

</div>