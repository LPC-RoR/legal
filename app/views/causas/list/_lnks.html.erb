<% if dog? %>
	<%= render layout: '0p/tltp_lnk', locals: {lnk: "causas/#{objeto.id}/chck_estds", tltp: 'Revisa estados', data: {turbo_method: :post}} do %>
		<i class="bi bi-journal-check"></i>
	<% end %>
	<i class="bi bi-dot"></i>
<% end %>

<%= render layout: '0p/collapse/link', locals: {label: 'Estado', objeto: objeto, tooltip: 'Último estado'} do %>
	<i class="bi bi-tag"></i>
<% end %>

<!-- Se despliega sólo si controller_name != 'clientes' -->
<%= render partial: 'clientes/shr/lnk_cl', locals: {objeto: objeto} %>

<!-- Bajar archivo Demanda -->
<% if objeto.demanda? and operacion? %>
	<%= link_to objeto.demanda.archivo.url, class: 'sb-link', target: :_blank, title: 'Archivo Demanda', 'data-toggle' => 'tooltip', 'data-placement' => 'right' do %>
		<i class="bi bi-paperclip"></i>
	<% end %>
<% end %>

<% if operacion? %>
	<%= render partial: '0p/swtch', locals: {objeto: objeto, tkn: :archvd, glys: ['arrow-counterclockwise', 'archive'], stts: ['sin archivar', 'archivada']} %>
	<i class="bi bi-dot"></i>
	<%= render partial: '0p/tbl/lnk_new', locals: {source: 'notas', ownr: objeto, gly: 'chat-left-text'} %>
	<%= render partial: '0p/tbl/lnks_e', locals: {objeto: objeto} if check_crud(objeto) %>
<% end %>