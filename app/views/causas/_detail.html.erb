<%= render partial: '0p/display/form_fields', locals: {form: form, helper_name: 'text', token: :identificador, label: 'Identificador', v: true } %>

<%= render partial: '0p/display/form_fields', locals: {form: form, helper_name: 'text', token: :causa, label: 'Causa', v: false } %>

<%= render partial: '0p/display/form_fields', locals: {form: form, helper_name: 'hidden', token: :estado, label: nil, v: false } %>