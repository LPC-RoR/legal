<%= render partial: '0p/form_fields/label', locals: { form: form, label: 'Cliente', v: true } %>
<%= form.select :cliente_id, Cliente.where(estado: 'activo').collect { |cliente| [cliente.razon_social, cliente.id] }, include_blank: false, prompt: "Seleccione Cliente" %>

<div class='row'>
	<div class='col-md-3'>
		<%= render partial: '0p/form_fields/label', locals: { form: form, label: 'Identificador', v: true } %>
		<%= render partial: '0p/form_fields/text', locals: { form: form, token: :identificador } %>
	</div>
	<div class='col-md-6'>
		<%= render partial: '0p/form_fields/label', locals: { form: form, label: 'Causa', v: true } %>
		<%= render partial: '0p/form_fields/text', locals: { form: form, token: :causa } %>
	</div>
	<div class='col-md-3'>
		<%= render partial: '0p/form_fields/label', locals: { form: form, label: 'Tipo', v: true } %>
		<%= render partial: '0p/form_fields/select', locals: { form: form, token: :tipo, sel_list: Causa::TIPOS, label: 'Tipo' } %>
	</div>
</div>

<%= render partial: '0p/display/form_fields', locals: {form: form, helper_name: 'hidden', token: :estado, label: nil, v: false } %>