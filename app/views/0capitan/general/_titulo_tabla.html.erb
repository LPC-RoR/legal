<%#= render '0capitan/general/titulo', locals: {gly: controller_icon[c], title: title, link: link_new.blank? ? "/#{c}/new" : link_new, link_gly: 'plus-circle'} %>

<%= render '0capitan/layouts/title_box' do %>

	<div class=" row text-info">
		<div class="col-10">
			<i class="bi bi-<%=controller_icon[c]%>"></i> 
			<%=title%>
		</div>
		<div class="col-2" align='right'>
			<% unless link_new.blank? %>
				<%= link_to link_new do %>
					<i class="bi bi-plus-circle"></i>
				<% end %>
			<% end %>
		</div>
	</div>

<% end %>
