<div class="row">
	<div class="col-8">
		<%= render partial: '0capitan/general/titulo_tabla', locals: {c: 'app_repos', title: 'Documentos, archivos y enlaces', link_new: nil} %>

		<% unless @coleccion['app_documentos'].empty? and @coleccion['app_archivos'].empty? and @coleccion['app_enlaces'].empty? %>
			<div class="shadow p-3 mb-3 bg-white rounded">

				<%= render partial: 'repositorios/app_documentos/partials/list', locals: {coleccion: @coleccion['app_documentos']} %>
				<%= render partial: 'repositorios/app_archivos/partials/list', locals: {coleccion: @coleccion['app_archivos']} %>
				<%= render partial: 'recursos/app_enlaces/partials/list', locals: {coleccion: @coleccion['app_enlaces']} %>

			</div>
		<% end %>
	</div>
	<div class="col-4">
		<%= render partial: '0capitan/repositorios/add_box', locals: {objeto: objeto, d_pendientes: d_pendientes, a_pendientes: a_pendientes} %>
	</div>
</div>