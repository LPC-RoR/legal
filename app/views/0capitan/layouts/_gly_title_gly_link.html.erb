<%#= render partial: '0capitan/layout/gly_title_gly_link', locals: {gly: gly, title: title, link_gly: link_gly, link: link} %>

<%= render '0p/general/title_box' do %>

	<div class=" row text-info">
		<div class="col-10">
			<i class="bi bi-<%=gly%>"></i> 
			<%=title%>
		</div>
		<div class="col-2" align='right'>
			<% unless link.blank? %>
				<%= link_to link do %>
					<i class="bi bi-<%=link_gly%>"></i>
				<% end %>
			<% end %>
		</div>
	</div>

<% end %>