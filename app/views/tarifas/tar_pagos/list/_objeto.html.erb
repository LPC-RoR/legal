<small>
<div class="row">
	<div class="col-lg-2">
		<%= render partial: '0p/tabla/links_orden', locals: {objeto: objeto} %>
	</div>
	<div class="col-lg-8">
		<i class="bi bi-coin"></i> 
		<b><%= link_to objeto.tar_pago, objeto %></b> <small class="text-muted">[ <%= objeto.moneda %> ]</small>
		</br>
		<% unless objeto.codigo_formula.blank? %>
			<i class="bi bi-arrow-right"></i> <i><%= objeto.codigo_formula %></i>
		<% else %>
			<i class="bi bi-arrow-right"></i> <b><%= s_moneda(objeto.moneda, objeto.valor) %></b>
		<% end %>
	</div>
	<div class="col-lg-2" align='right'>
		<small><%= render partial: '0p/tabla/links_e', locals: {objeto: objeto} %></small>
	</div>
</div>
</small>