<h4><i class="bi bi-<%= controller_icon['tar_facturas'] %>"></i> Factura de cliente <%= link_to @objeto.padre.razon_social, @objeto.padre %></h4>

<%= render partial: 'estados/st_estados/partials/change_state', locals: {objeto: @objeto} %>

<div class="row">
	<div class='col-md-8'>
		<%= render partial: 'tarifas/tar_facturas/partials/emision', locals: {objeto: @objeto} %>
		<%= render partial: 'tarifas/tar_facturas/partials/pago', locals: {objeto: @objeto} %>
		
		<%= render partial: '0p/tabla/display_tabla', locals: {c: 'tar_facturaciones'} %>
	</div>
	<div class='col-md-4'>
	</div>
</div>

<h4>TOTAL <%= "#{s_pesos(@objeto.monto_pesos)} | #{s_uf(@objeto.monto_uf)}" %></h4>
<% unless @objeto.tar_nota_credito.blank? %>
	 <%= "Nota de crédito N° #{@objeto.tar_nota_credito.numero}, emitida el #{dma(@objeto.tar_nota_credito.fecha)} por #{@objeto.tar_nota_credito.monto_total ? s_pesos(@objeto.monto_pesos) : s_pesos(@objeto.tar_nota_credito.monto)}" %>
<% end %>