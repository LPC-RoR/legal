<!-- DESPLIEGUE DEL TAB FACTURACION DE UNA CAUSA/CONSULTORIA-->
<%= render partial: '0p/general/gly_title_size', locals: {gly: 'coin', title: 'Despliegue Tarifa', size: 6} %>

<% objeto.tar_tarifa.tar_pagos.each do |pago| %>

	<%= render partial: 'tarifas/partials/despliegue_tarifa', locals: {objeto: objeto, pago: pago} %>

	<!-- BOTON FACTURACION -->
	<% unless objeto.facturaciones.map {|facts| facts.facturable}.include?(pago.codigo_formula) %>
    	<p><%= render partial: '0p/general/btn_proceso', locals: {texto: pago.tar_pago, gly: 'coin', link: "/tar_facturaciones/crea_facturacion?owner_class=#{objeto.class.name}&owner_id=#{objeto.id}&facturable=#{pago.codigo_formula}", clr: config[:color][:app], delete: false} unless pago.codigo_formula.blank? %>
		</p>
    <% end %>

    <hr>

<% end %>


