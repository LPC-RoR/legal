	<%= s_pesos(valor) %>
<% else %>
	<%= objeto.uf_calculo_pago(pago).blank? ? 'UF de cálculo no ingresada' : s_pesos(valor * objeto.uf_calculo_pago(pago).valor) %>
<% end %> | 
<% if pago.moneda == 'Pesos' %>
	<%= objeto.uf_calculo_pago(pago).blank? ? 'UF de cálculo no ingresada' : s_uf5(valor / objeto.uf_calculo_pago(pago).valor) %>
<% else %>
	<%= s_uf5(valor) %>
<% end %>

