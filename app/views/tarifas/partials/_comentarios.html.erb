<% unless pago.blank? %>
		<% unless pago.tar_comentarios.empty? %>

		<ul>
			<% pago.tar_comentarios.order(:orden).each do |comentario| %>
				<small>
				<% if comentario.tipo == 'Siempre' %>	
					<li>
						<%= comentario.comentario %>
						<% unless comentario.despliegue.blank? %>
							<% if comentario.moneda == 'Pesos' %>
								<%= s_pesos(eval_elemento(comentario.despliegue, objeto.tar_tarifa.tar_formulas, objeto, pago)) %>
							<% else %>
								<%= s_uf(eval_elemento(comentario.despliegue, objeto.tar_tarifa.tar_formulas, objeto, pago)) %>
							<% end %>
						<% end %>
					</li>
				<% elsif comentario.tipo == 'CondiciÃ³n' %>
					<% if eval_condicion(comentario.formula, pago.tar_tarifa.tar_formulas, objeto, pago) %>
						<li>
							<%= comentario.comentario %>
							<!-- DESPLIEGUE DE VALORES -->
							<% unless comentario.despliegue.blank? %>
								<% if comentario.moneda == 'Pesos' %>
									<%= s_pesos(eval_elemento(comentario.despliegue, objeto.tar_tarifa.tar_formulas, objeto, pago)) %>
								<% else %>
									<%= s_uf(eval_elemento(comentario.despliegue, objeto.tar_tarifa.tar_formulas, objeto, pago)) %>
								<% end %>
							<% end %>
						</li>
					<% end %>
				<% end %>
				</small>
			<% end %>
		</ul>

		<% end %>	
<% end %>