<div class="row gx-1">
	<div class="col-lg-3 col-xs-12">
		<%= render partial: '0p/lbld_inpts/select', locals: { form: form, token: :tipo, sel_list: TarServicio::TIPOS, label: 'Tipo' } %>
	</div>
	<div class="col-lg-9">
		<%= render partial: '0p/lbld_inpts/text', locals: { form: form, token: :descripcion, label: 'Asesoría' } %>
	</div>
</div>

<div class="row gx-1">
	<div class="col-lg-3 col-xs-12">
		<% unless @objeto.ownr_id.blank? %>
			<%= render partial: '0p/lbld_inpts/select_id', locals: { form: form, token: :tipo_asesoria_id, colection: TipoAsesoria.all.order(:tipo_asesoria).collect { |ta| [ta.detalle, ta.id] }, prompt: 'Tipo Asesoría', label: 'Definir como tarifa por defecto' } %>
		<% end %>
	</div>
	<div class="col-lg-9">
		<div class="row gx-1">
			<div class="col-lg-6 col-xs-12">
				<%= render partial: '0p/lbld_inpts/number', locals: { form: form, token: :monto, label: 'Monto' } %>
			</div>
			<div class="col-lg-6">
				<%= render partial: '0p/lbld_inpts/select', locals: { form: form, token: :moneda, sel_list: TarServicio::MONEDAS, label: 'Moneda' } %>
			</div>
		</div>
	</div>
</div>

<%= render partial: '0p/lbld_inpts/text_area', locals: { form: form, token: :detalle, label: 'Detalle' } %>

<%= render partial: '0p/lbld_inpts/hidden_lst', locals: { form: form, hddn_lst: [:estado, :ownr_type, :ownr_id] } %>