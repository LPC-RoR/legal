<%= render partial: '0p/form_fields/label', locals: { form: form, token: :descripcion, label: 'Asesoría' } %>
<%= render partial: '0p/form_fields/text', locals: { form: form, token: :descripcion } %>

<div class="f_50lft_col">
	<div class="lft">
		<%= render partial: '0p/form_fields/label', locals: { form: form, token: :tipo, label: 'Tipo' } %>
		<%= render partial: '0p/form_fields/select', locals: { form: form, token: :tipo, sel_list: TarServicio::TIPOS, label: nil } %>
		<% unless @objeto.owner_id.blank? %>
			</br>
			<%= render partial: '0p/form_fields/label', locals: { form: form, token: :tipo_causa_id, label: 'Definir como tarifa por defecto' } %>
			<%= render partial: '0p/form_fields/select_id', locals: { form: form, token: :tipo_asesoria_id, colection: TipoAsesoria.all.order(:tipo_asesoria).collect { |ta| [ta.detalle, ta.id] }, display_field: 'tipo_asesoria', prompt: 'Tipo Asesoría' } %>
		<% end %>
	</div>
	<div class="rght">
		<%= render partial: '0p/form_fields/label', locals: { form: form, token: :moneda, label: 'Moneda' } %>
		<%= render partial: '0p/form_fields/select', locals: { form: form, token: :moneda, sel_list: TarServicio::MONEDAS, label: nil } %>

		<%= render partial: '0p/form_fields/label', locals: { form: form, token: :monto, label: 'Monto' } %>
		<%= render partial: '0p/form_fields/number', locals: { form: form, token: :monto } %>
	</div>
</div>

<%= render partial: '0p/form_fields/label', locals: { form: form, token: :detalle, label: 'Detalle' } %>
<%= render partial: '0p/form_fields/text_area', locals: { form: form, token: :detalle } %>

<%= render partial: '0p/form_fields/hidden', locals: { form: form, token: :estado } %>
<%= render partial: '0p/form_fields/hidden', locals: { form: form, token: :owner_class } %>
<%= render partial: '0p/form_fields/hidden', locals: { form: form, token: :owner_id } %>
