<% if objeto.estado == 'aprobado' or objeto.tar_factura.present? %>
	<% if ['tar_facturas', 'reg_reportes'].include?(controller_name) %>
		<% if objeto.tar_factura.estado == 'ingreso' and objeto.facturable.present? %>
			<%= render partial: '0p/general/btn_proceso', locals: {texto: nil, link: link_x_btn(objeto, '/facturable', true), clr: color(objeto.class.name.tableize), delete: false, gly: 'arrow-bar-right'} %>
		<% end %>
	<% end %>
<% end %>

<% if (controller_name == 'tar_facturas') and objeto.padre.present? %>
	<%= render partial: '0p/general/btn_proceso', locals: {texto: nil, link: objeto.padre, clr: color(objeto.class.name.tableize), delete: false, gly: controller_icon[objeto.padre.class.name.tableize]} %>
<% end %>

<% if controller_name == 'causas' and objeto.tar_factura.present? %>
	<%= render partial: '0p/general/btn_proceso', locals: {texto: nil, link: objeto.tar_factura, clr: color(objeto.class.name.tableize), delete: false, gly: controller_icon[objeto.tar_factura.class.name.tableize]} %>
<% end %>