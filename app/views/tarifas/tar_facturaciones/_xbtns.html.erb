<% if objeto.tar_factura.blank? %>
	<% unless objeto.estado == 'aprobación' %>
		<%= render partial: '0p/general/btn_proceso', locals: {texto: nil, link: link_x_btn(objeto, '/estado?e=aprobación', true), clr: color(objeto.class.name.tableize), delete: false, gly: 'list-check'} %>
	<% end %>
	<% unless objeto.estado == 'aprobado' %>
		<%= render partial: '0p/general/btn_proceso', locals: {texto: nil, link: link_x_btn(objeto, '/estado?e=aprobado', true), clr: color(objeto.class.name.tableize), delete: false, gly: 'check-all'} %>
	<% end %>
<% end %>

<% unless objeto.estado == 'aprobado' or objeto.tar_factura.present? %>
	<%= render partial: '0p/general/btn_proceso', locals: {texto: nil, link: link_x_btn(objeto, '/elimina', true), clr: color(objeto.class.name.tableize), delete: false, gly: 'trash'} %>
<% end %>

<% if objeto.estado == 'aprobado' or objeto.tar_factura.present? %>
	<% if ['tar_facturas', 'reg_reportes'].include?(controller_name) %>
		<% if objeto.tar_factura.estado == 'ingreso' %>
			<%= render partial: '0p/general/btn_proceso', locals: {texto: nil, link: link_x_btn(objeto, '/facturable', true), clr: color(objeto.class.name.tableize), delete: false, gly: 'x-circle'} %>
		<% end %>
	<% end %>
<% end %>