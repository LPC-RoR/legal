<% if ['causas', 'consultorias', 'reg_reportes'].include?(controller_name) and objeto.tar_factura.blank? %>
	<!-- ELIMINA REGISTRO, se usa para revertir facturacion -->
	<%= render partial: '0p/general/btn_proceso', locals: {texto: nil, link: link_x_btn(objeto, '/elimina', true), clr: color(objeto.class.name.tableize), delete: false, gly: 'x-circle'} %>
<% elsif ['tar_facturas', 'reg_reportes'].include?(controller_name) %>
	<% if ['ingreso', 'facturada'].include?(objeto.estado) and objeto.tar_factura.estado == 'ingreso' %>
		<%= render partial: '0p/general/btn_proceso', locals: {texto: nil, link: link_x_btn(objeto, '/facturable', true), clr: color(objeto.class.name.tableize), delete: false, gly: 'x-circle'} %>
	<% end %>
<% end %>