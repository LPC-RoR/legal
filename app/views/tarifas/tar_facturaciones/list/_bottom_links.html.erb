<% if controller_name == 'tar_aprobaciones' %>
	<% if action_name == 'index' %>
		<% if objeto.tar_aprobacion.blank? and objeto.tar_factura.blank? %>
			<%= link_to "tar_facturaciones/#{objeto.id}/crea_aprobacion" do %>
				<small><i class="bi bi-file-plus"></i> Crea aprobaci√≥n</small>
			<% end %>
		<% end %>
	<% elsif action_name == 'show' %>
		<% if objeto.tar_aprobacion.blank? and objeto.tar_factura.blank? %>
			<%= link_to "/tar_facturaciones/#{objeto.id}/a_aprobacion?indice=#{@objeto.id}" do %>
				<i class="bi bi-arrow-bar-left"></i></small>
			<% end %>
		<% elsif objeto.tar_factura.blank? %>
			<%= link_to "/tar_facturaciones/#{objeto.id}/a_pendiente?indice=#{@objeto.id}" do %>
				<i class="bi bi-arrow-bar-right"></i></small>
			<% end %>
		<% end %>
	<% end %>
<% else %>	
<% end %>