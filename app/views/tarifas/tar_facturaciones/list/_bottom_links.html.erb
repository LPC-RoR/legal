<% if controller_name == 'tar_aprobaciones' %>
	<% if action_name == 'index' %>
		<% if objeto.tar_aprobacion.blank? and objeto.tar_factura.blank? %>
			<%= link_to "tar_facturaciones/#{objeto.id}/crea_aprobacion" do %>
				<small><i class="bi bi-file-plus"></i> Crea aprobaci√≥n</small>
			<% end %>
		<% end %>
	<% elsif action_name == 'show' %>
	<% end %>
<% elsif controller_name == 'causas' %>	
	<% if objeto.tar_aprobacion.blank? and objeto.tar_factura.blank? %>
		<%= link_to link_x_btn(objeto, '/elimina', true) do %>
			<small><i class="bi bi-trash"></i></small>
		<% end %>
	<% end %>
	<% if objeto.tar_aprobacion.present? %>
		<%= link_to objeto.tar_aprobacion do %>
			<small><i class="bi bi-check-all"></i> <%= dma(objeto.tar_aprobacion.fecha) %></small>
		<% end %>
	<% end %>
	<% if objeto.tar_factura.present? %>
		<%= link_to objeto.tar_factura do %>
			<small><i class="bi bi-receipt"> <%= dma(objeto.tar_factura.fecha) %></i></small>
		<% end %>
	<% end %>
<% end %>