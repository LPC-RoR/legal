<% unless objeto.tar_aprobacion.blank? or controller_name == 'tar_aprobaciones' %>
	<%= render layout: '0p/tltp_lnk', locals: {lnk: objeto.tar_aprobacion, tltp: "Ver aprobacion #{objeto.tar_aprobacion.id}" } do %>
		<i class="bi bi-check2-all"></i>
	<% end %>
<% end %>
<% unless objeto.tar_factura.blank? or controller_name == 'tar_facturas' %>
	<%= render layout: '0p/tltp_lnk', locals: {lnk: objeto.tar_factura, tltp: "Ver factura #{objeto.tar_factura.documento}" } do %>
		<i class="bi bi-receipt"></i>
	<% end %>
<% end %>
