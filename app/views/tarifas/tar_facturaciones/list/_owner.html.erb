<small>
<i class="bi bi-dot"></i>
<%= render partial: 'tarifas/tar_facturaciones/list/aprobacion_factura', locals: {objeto: objeto} %>
<%= objeto.owner.class.name unless objeto.owner_id.blank? %> : 
<% case objeto.owner.class.name %>
<% when 'Causa' %>
	<%= link_to objeto.owner.rit, "/causas/#{objeto.owner.id}?html_options[menu]=Tarifa+%26+Pagos" %> <%= objeto.owner.causa %>
<% when 'TarServicio' %>
	<%= link_to objeto.owner.codigo, objeto.owner %> <%= objeto.owner.descripcion %>
<% when 'RegReporte' %>
	<%= link_to objeto.owner.nombre_padre, objeto.owner %>
<% when 'Asesoria' %>
	<%= link_to objeto.owner.descripcion, objeto.owner %>
<% end %>
</small>
</br>