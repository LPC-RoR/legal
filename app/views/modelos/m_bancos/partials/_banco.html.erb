<tr class="table-sm">

	<td colspan='2'>
		<i class="bi bi-<%= controller_icon['m_conceptos'] %>"></i> <small>
			<%#= link_to( objeto.m_banco, objeto, class: 'sb-link') %>
			<b><%= objeto.m_banco %></b>
		</small>
	</td>

	<td>
		<%= link_to "m_cuentas/new?owner=#{objeto.id}", class: "btn btn-outline-#{color(objeto.class.name.tableize)} btn-sm"  do %>
			<i class="bi bi-plus-square"></i>
		<% end %>

		<%= render partial: '0p/tabla/btn_editar', locals: {objeto: objeto} %>
		<% if not has_child?(objeto) %>
			<%= render partial: '0p/tabla/btn_eliminar', locals: {objeto: objeto} %>
		<% end %>
	</td>

</tr>

<% objeto.m_cuentas.order(:m_cuenta).each do |cuenta| %>
	<tr class="table-sm">

		<td colspan='2' style="padding-left:20px">
			<i class="bi bi-<%= controller_icon['m_cuentas'] %>"></i> <small>
				<%= link_to( cuenta.m_cuenta, cuenta, class: 'sb-link') %>
			</small>
		</td>

		<td>
			<%= render partial: '0p/tabla/btn_editar', locals: {objeto: cuenta} %>
			<% if not has_child?(cuenta) %>
				<%= render partial: '0p/tabla/btn_eliminar', locals: {objeto: cuenta} %>
			<% end %>
		</td>

	</tr>
<% end %>