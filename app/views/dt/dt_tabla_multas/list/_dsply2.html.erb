<div class="row mt-1 mx-2 gx-1 objt_lnk" style="font-size: 14px;">
	<div class="col-8">
		Detalle de la multa
	</div>
	<div class="col-4 text-end">
		<%= render partial: '0p/tbl/lnk_new', locals: {source: 'dt_multas', blngs: objeto} %>
	</div>
</div>
<table class="table table-striped table-sm  thead-dark">
	<thead>
		<tr>
			<td><i><small>Tamaño Empresa</small></i></td>
			<td><i><small>Leve</small></i></td>
			<td><i><small>Grave</small></i></td>
			<td><i><small>Gravísima</small></i></td>
			<td></td>
		</tr>
	</thead>

	<tbody>
	<!-- Opción para evitar escribir el parcial _modelo.html.erb en cada controlador-->
		<% unless objeto.p100_leve.blank? %>
			<tr>
			  <td><i><small><%= "-" %></small></i></td>
			  <td><i><small><%= s_p100(objeto.p100_leve, 0) %></small></i></td>
			  <td><i><small><%= s_p100(objeto.p100_grave, 0) %></small></i></td>
			  <td><i><small><%= s_p100(objeto.p100_gravisima, 0) %></small></i></td>
			  <td></td>
			</tr>
		<% end %>
		<% objeto.dt_multas.order(:orden).each do |multa| %>
			<tr>
			  <td><i><small><%= multa.tamanio %></small></i></td>
			  <td class="text-end"><i><small><%= multa.leve %></small></i></td>
			  <td class="text-end"><i><small><%= multa.grave %></small></i></td>
			  <td class="text-end"><i><small><%= multa.gravisima %></small></i></td>
			  <td class="objt_lnk"><%= render partial: '0p/tbl/lnks_e', locals: {objeto: multa} %></td>
			</tr>
		<% end  %>
	</tbody>
</table>