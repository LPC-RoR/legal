<p id="notice"><%= notice %></p>

<h1>Registros</h1>

<table>
  <thead>
    <tr>
      <th>Owner class</th>
      <th>Owner</th>
      <th>Fecha</th>
      <th>Tipo</th>
      <th>Detalle</th>
      <th>Nota</th>
      <th>Duracion.time</th>
      <th>Descuento</th>
      <th>Razon descuento</th>
      <th>Estado</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @registros.each do |registro| %>
      <tr>
        <td><%= registro.owner_class %></td>
        <td><%= registro.owner_id %></td>
        <td><%= registro.fecha %></td>
        <td><%= registro.tipo %></td>
        <td><%= registro.detalle %></td>
        <td><%= registro.nota %></td>
        <td><%= registro.duracion.time %></td>
        <td><%= registro.descuento %></td>
        <td><%= registro.razon_descuento %></td>
        <td><%= registro.estado %></td>
        <td><%= link_to 'Show', registro %></td>
        <td><%= link_to 'Edit', edit_registro_path(registro) %></td>
        <td><%= link_to 'Destroy', registro, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

