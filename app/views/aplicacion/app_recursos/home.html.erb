<% else %>

<div class="row justify-content-center g-0">
	<div class="col-12 col-md-5">
		<div class="card bg-dark text-white">
			<%= image_tag HImagen.find_by(nombre: 'Portada').imagen(nil).imagen.half.url, class: "card-img img-fluid" unless HImagen.find_by(nombre: 'Portada').blank? %>
