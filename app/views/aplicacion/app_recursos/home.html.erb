		    <p class="card-text"><%= link_to 'leer más...', root_path %></p>
		  </div>
		</div>
	</div>
	<div class="col-12 col-md-5">
		<div class="card bg-dark text-white">
			<%= image_tag HImagen.find_by(nombre: 'Trabajador').imagen(nil).imagen.url, class: 'card-img', size: "350x175" unless HImagen.find_by(nombre: 'Trabajador').blank? %>
