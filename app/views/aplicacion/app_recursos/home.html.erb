<% if usuario_signed_in? %>

	<div class='row'>
		<div class="col-md-4">
			<%= render partial: '0p/general/gly_title_size', locals: {gly: controller_icon['causas'], title: 'Causas', size: 4} %>

			<%= render partial: 'aplicacion/app_recursos/partials/display_elemento', locals: {c: 'causas', title: 'Causas sin cuantia', coleccion: @causas_sin_cuantia} %>

			<%= render partial: 'aplicacion/app_recursos/partials/display_elemento', locals: {c: 'causas', title: 'Causas sin facturar', coleccion: @causas_sin_facturar} %>

			<%= render partial: 'aplicacion/app_recursos/partials/display_elemento', locals: {c: 'causas', title: 'Causas en proceso', coleccion: @causas_en_proceso} %>
		</div>
		<div class="col-md-4">
			<%= render partial: '0p/general/gly_title_size', locals: {gly: controller_icon['tar_facturaciones'], title: 'Cargos', size: 4} %>

			<%= render partial: 'aplicacion/app_recursos/partials/display_elemento', locals: {c: 'tar_facturaciones', title: 'Cargos en aprobación', coleccion: @cargos_sin_aprobar} %>

			<%= render partial: 'aplicacion/app_recursos/partials/display_elemento', locals: {c: 'tar_facturaciones', title: 'Cargos sin facturar', coleccion: @cargos_sin_facturar} %>
		</div>
		<div class="col-md-4">
			<%= render partial: '0p/general/gly_title_size', locals: {gly: controller_icon['tar_facturas'], title: 'Facturas', size: 4} %>

			<%= render partial: 'aplicacion/app_recursos/partials/display_elemento', locals: {c: 'tar_facturas', title: 'Facturas por emitir', coleccion: @facturas_sin_emitir} %>
			<%= render partial: 'aplicacion/app_recursos/partials/display_elemento', locals: {c: 'tar_facturas', title: 'Facturas en cobranza', coleccion: @facturas_en_cobranza} %>
		</div>
	</div>
<% else %>

<div class="row">
	<%= image_tag HImagen.find_by(nombre: 'Portada').imagen(nil).imagen.url, class: "mx-auto d-block", unless HImagen.find_by(nombre: 'Portada').blank? %>
</div>
<hr>
<div class="row">
	<div class="col-md-4" align='center'>
		<div class="card" style="width: 22rem;" >
		<%= image_tag HImagen.find_by(nombre: 'Trabajador').imagen(nil).imagen.url, size: "350x180" unless HImagen.find_by(nombre: 'Trabajador').blank? %>
		  <div class="card-body">
		    <h5 class="card-title">Trabajadores</h5>
		    <p class="card-text">
		    	Texto trabajadores
			</p>
		    <a href="#" class="btn btn-dark">Subir antecedentes</a>
		  </div>
		  <ul class="list-group list-group-flush">
		    <li class="list-group-item">Juicios laborales</li>
		    <li class="list-group-item">contratos</li>
		    <li class="list-group-item">Finiquitos</li>
		  </ul>
		</div>
	</div>
	<div class="col-md-4" align='center'>
		<div class="card" style="width: 22rem;">
		<%= image_tag HImagen.find_by(nombre: 'Sindicato').imagen(nil).imagen.url, size: "350x180" unless HImagen.find_by(nombre: 'Sindicato').blank? %>
		  <div class="card-body">
		    <h5 class="card-title">Sindicatos</h5>
		    <p class="card-text">
		    	Texto sindicatos
		    </p>
		    <a href="#" class="btn btn-dark">Subir antecedentes</a>
		  </div>
		  <ul class="list-group list-group-flush">
		    <li class="list-group-item">Negociación colectiva</li>
		    <li class="list-group-item">Asesoría en gestión sindical</li>
		    <li class="list-group-item">Capacitación a líderes sindicales</li>
		  </ul>
		</div>
	</div>
	<div class="col-md-4" align='center'>
		<div class="card" style="width: 22rem;">
		<%= image_tag HImagen.find_by(nombre: 'Documentos').imagen(nil).imagen.url, size: "350x180" unless HImagen.find_by(nombre: 'Documentos').blank? %>
		  <div class="card-body">
		    <h5 class="card-title">Documentación</h5>
		    <p class="card-text">Texto documentación.</p>
		    <a href="#" class="btn btn-dark">Subir antecedentes</a>
		  </div>
		  <ul class="list-group list-group-flush">
		    <li class="list-group-item">Contratos y anexos</li>
		    <li class="list-group-item">Reglamento interno</li>
		    <li class="list-group-item">Cartas</li>
		  </ul>
		</div>
	</div>
</div>

<% end %>
