<p><%= image_tag 'logo_tyc.png' %></p>
<%= render partial: '0p/general/gly_title_size', locals: {gly: 'cash-coin', title: "Facturación por aprobar", size: 4} %>

<%= render partial: '0p/general/gly_title_size', locals: {gly: 'building', title: @cliente.razon_social, size: 5} %>

<% @cliente.aprobaciones.each do |facturacion| %>


	<div class='row'>
		<div class="col-md-6">
			<b><%= facturacion.pago_tarifa.tar_pago %></b></br>
			<!--small-->
				<b>
					<% unless uf_del_dia.blank? %>
						<%= facturacion.padre.class.name %> : 
						<% if facturacion.padre.class.name == 'Causa' %>
							<%= link_to facturacion.padre.rit, facturacion.padre  %> <%= '|' %> 
						<% end %>
						<%= "#{facturacion.padre.as_owner} : #{s_uf(facturacion.monto_uf)} | #{s_pesos(facturacion.monto_pesos)}" %> 
					<% else %>
						UF del día no ingresada!
					<% end %>
				</b></br>
				<small><%= link_to 'Ver reporte', facturacion.owner, target: :_blank if facturacion.owner.class.name == 'RegReporte' %></small>
				<%= render partial: 'tarifas/partials/cuantia', locals: {objeto: facturacion.padre, pago: facturacion.pago} if facturacion.owner.class.name == 'Causa'%>
			<!--/small-->
		</div>
		<div class="col-md-6"></div>
	</div>

	<hr>
			
<% end %>
<h4><%= "TOTAL FACTURA : #{s_uf(@cliente.aprob_total_uf)} | #{s_pesos(@cliente.aprob_total_pesos)}" %></h5>