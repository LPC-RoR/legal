<small><small>
	<% if objeto.facturacion.blank? %>
		<% unless ( objeto.tar_servicio.blank? and ( objeto.moneda.blank? or objeto.monto.blank? ) ) %>
			<%= link_to 'generar cobro', "/tar_facturaciones/crea_facturacion?owner_class=#{objeto.class.name}&owner_id=#{objeto.id}" %>
		<% end %>
	<% else %>
		<% if objeto.facturacion.tar_aprobacion.blank? and objeto.facturacion.tar_factura.blank? %>
			<%= link_to 'eliminar cobro', "/tar_facturaciones/#{objeto.facturacion.id}/elimina_facturacion" %>
		<% end %>

		<% if objeto.facturacion.tar_factura.blank? %>
			<%= link_to 'facturar', "/asesorias/#{objeto.id}/facturar" %>
		<% elsif objeto.facturacion.tar_factura.estado == 'ingreso' %>
			<%= link_to 'liberar factura', "/asesorias/#{objeto.id}/liberar_factura" %>
		<% end %>
	<% end %>
</small></small>