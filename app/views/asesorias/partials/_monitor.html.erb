<div class="as_ttl">
  <div class="ttl_ttl">
    <%= render partial: '0p/general/gly', locals: {gly: controller_icon['asesorias']} %>
    Asesorías
  </div>
  <div class="ttl_lnks">
  </div>
</div>

<div class="doscpx_w">
  <div class="lft">
    <%= render partial: '0p/cmenu/cmenu', locals: { c: 'asesorias', tipo: tipo, estado: estado, path: path} %>
  </div>
  <div class="rght">

    <div class="as_ttl">
      <div class="ttl_ttl">
        <%= render partial: '0p/general/gly', locals: {gly: controller_icon['asesorias']} %>
        <% if tipo.blank? %>
          <%= "Asesorias #{cmenu_clss['asesorias'][:items][estado]}" %>
        <% else %>
          <%= tipo %>
        <% end %>
      </div>
      <div class="ttl_lnks">
        <%= render layout: '0p/layout/tooltip_link', locals: {link: ((check_crud('Asesoria') and estado == @estados[0]) ? "/asesorias/new" : nil), tooltip: 'Agregar Asesoría'} do %>
          <i class="bi bi-plus-circle"></i>
        <% end %>
      </div>
    </div>

    <%= render partial: '0p/tabla/tabla', locals: {c: 'asesorias'} %>
  </div>
</div>


