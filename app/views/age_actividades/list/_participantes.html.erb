<small><small>
	<b class="text-info">Participantes</b></br>
	<% objeto.app_perfiles.each do |perfil| %>
		<%= link_to "/age_actividades/#{objeto.id}/resta_participante?pid=#{perfil.id}&loc=#{controller_name}" do %>
			<i class="bi bi-arrow-bar-down"></i> <%= perfil.nombre_perfil %>
		<% end %>
		</br>
	<% end %>
<hr>
	<b class="text-info">Disponibles</b></br>
	<% AppPerfil.all.each do |perfil_base| %>
		<% unless objeto.app_perfiles.ids.include?(perfil_base.id) %>
			<%= link_to "/age_actividades/#{objeto.id}/suma_participante?pid=#{perfil_base.id}&loc=#{controller_name}" do %>
				<i class="bi bi-arrow-bar-up"></i> <%= perfil_base.nombre_perfil %>
			<% end %>
		<% end %>
		</br>
	<% end %>
</small></small>