			<%= render partial: 'actividades/age_pendientes/list/objeto', locals: {objeto: pndnt} %>
		<% end %>
	<% end %>
	<% if @pndnts_warning.any? %>
		<% @pndnts_warning.each do |pndnt| %>
			<%= render partial: 'actividades/age_pendientes/list/objeto', locals: {objeto: pndnt} %>
		<% end %>
	<% end %>
	<% if @pndnts_success.any? %>
		<% @pndnts_success.each do |pndnt| %>
			<%= render partial: 'actividades/age_pendientes/list/objeto', locals: {objeto: pndnt} %>
		<% end %>
	<% end %>
	<% if @pndnts_nuevos.any? %>
		<% @pndnts_nuevos.each do |pndnt| %>
			<%= render partial: 'actividades/age_pendientes/list/objeto', locals: {objeto: pndnt} %>
		<% end %>
	<% end %>
<% else %>
	<% if @pndnts_rlzds.any? %>
		<% @pndnts_rlzds.each do |pndnt| %>
			<%= render partial: 'actividades/age_pendientes/list/objeto', locals: {objeto: pndnt} %>
		<% end %>
	<% end %>
<% end %>