<small>
<% unless objeto.prioridad.blank? %>
	<%= link_to "/age_pendientes/#{objeto.id}/cambia_prioridad?cn=#{controller_name}&prioridad=nil", title: 'sin', 'data-toggle' => 'tooltip', 'data-placement' => 'right' do %>
		<i class="bi bi-circle-fill text-dark"></i>
	<% end %>
<% end %>
<% unless objeto.prioridad == 'success' %>
	<%= link_to "/age_pendientes/#{objeto.id}/cambia_prioridad?cn=#{controller_name}&prioridad=success", title: 'normal', 'data-toggle' => 'tooltip', 'data-placement' => 'right' do %>
		<i class="bi bi-circle-fill text-success"></i>
	<% end %>
<% end %>
<% unless objeto.prioridad == 'warning' %>
	<%= link_to "/age_pendientes/#{objeto.id}/cambia_prioridad?cn=#{controller_name}&prioridad=warning", title: 'mediana', 'data-toggle' => 'tooltip', 'data-placement' => 'right' do %>
		<i class="bi bi-circle-fill text-warning"></i>
	<% end %>
<% end %>
<% unless objeto.prioridad == 'danger' %>
	<%= link_to "/age_pendientes/#{objeto.id}/cambia_prioridad?cn=#{controller_name}&prioridad=danger", title: 'urgente', 'data-toggle' => 'tooltip', 'data-placement' => 'right' do %>
		<i class="bi bi-circle-fill text-danger"></i>
	<% end %>
<% end %>
</small>