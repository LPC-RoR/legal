<%#= @objeto.ownr_type %>
<%#= @objeto.ownr_id %>
<%#= @objeto.tipo %>
<% if @objeto.ownr_id.blank? %>
	<%= render partial: '0p/lbld_inpts/radio', locals: { form: form, token: :tipo, label: 'Tipo' } %>
<% else %>
	<h5 class="text-dark"><%= @objeto.tipo %>: <%= @objeto.age_actividad %></h5>
<% end %>


<%= render partial: '0p/lbld_inpts/datetime_clndr', locals: { form: form, token: :fecha, label: 'Fecha' } %>

<% unless @objeto.tipo == 'Audiencia' %>
	<%= render partial: '0p/lbld_inpts/text', locals: { form: form, token: :age_actividad, label: 'Actividad' } %>
<% end %>

<% unless @objeto.tipo == 'Audiencia' %>
	<%= render partial: '0p/lbld_inpts/check_box', locals: { form: form, token: :privada, label: 'privada!' } %>
<% end %>

<%= render partial: '0p/lbld_inpts/hidden', locals: { form: form, token: :ownr_type } %>
<%= render partial: '0p/lbld_inpts/hidden', locals: { form: form, token: :ownr_id } %>
<%= render partial: '0p/lbld_inpts/hidden', locals: { form: form, token: :app_perfil_id } %>
<%= render partial: '0p/lbld_inpts/hidden', locals: { form: form, token: :estado } %>

<%= render partial: '0p/lbld_inpts/hidden', locals: { form: form, token: :tipo} if @objeto.ownr_id? %>
<%= render partial: '0p/lbld_inpts/hidden', locals: { form: form, token: :fecha } if action_name == 'edit' %>
<%= render partial: '0p/lbld_inpts/hidden', locals: { form: form, token: :age_actividad } if @objeto.tipo == 'Audiencia' %>