<small>
<% unless objeto.estado == 'realizada' %>
	<%= link_to "/age_actividades/#{objeto.id}/cambia_estado?cn=#{controller_name}&e=realizada", title: 'realizada', 'data-toggle' => 'tooltip', 'data-placement' => 'right' do %>
		<i class="bi bi-check-lg"></i>
	<% end %>
<% end %>
<% unless objeto.estado == 'cancelada' %>
	<%= link_to "/age_actividades/#{objeto.id}/cambia_estado?cn=#{controller_name}&e=cancelada", title: 'cancelada', 'data-toggle' => 'tooltip', 'data-placement' => 'right' do %>
		<i class="bi bi-x-lg"></i>
	<% end %>
<% end %>
<% unless objeto.estado == 'pendiente' %>
	<%= link_to "/age_actividades/#{objeto.id}/cambia_estado?cn=#{controller_name}&e=pendiente", title: 'pendiente', 'data-toggle' => 'tooltip', 'data-placement' => 'right' do %>
		<i class="bi bi-arrow-left"></i>
	<% end %>
<% end %>
</small>