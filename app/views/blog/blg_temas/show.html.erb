    </div>
    <div class="col-lg-8 encabezado-articulo">
      <div class='nombre-tema' align='center'><p><h4><%= @objeto.blg_tema %></h4></p></div>
    </div>
  </div>
    <div class="cuerpo-articulo">
    	<%= render partial: '0blog/list' unless @coleccion['blg_temas'].blank? %>
      <%#= @objeto.blg_articulos.order(created_at: :desc) %>
    </div>
</div>