<%= render partial: 'clientes/shw/ttl_cl', locals: {c: 'clientes', objeto: @objeto} %>
<%= render partial: 'estados/st_estados/partials/change_state', locals: {objeto: @objeto} %>

<%= render partial: '0p/tabs/tabs', locals: { token: :menu } %>
<% case @options[:menu] %>
<% when 'Agenda' %>
	<%= render partial: 'actividades/shr/bjt_agenda', locals: {objeto: @objeto, usuarios: @age_usuarios} %>
<% when 'Causas' %>
	<%= render partial: 'causas/ndx/monitor', locals: {estados: @estados, tipos: @tipos, tipo: @tipo, estado: @estado, path: @path} %>
<% when 'Asesorias' %>
	<%= render partial: 'asesorias/ndx/monitor', locals: {estados: @estados, tipos: @tipos, tipo: @tipo, estado: @estado, path: @path} %>
<% when 'Facturas' %>
	<%= render partial: 'tarifas/tar_facturas/ndx/monitor', locals: {estados: @estados, tipos: @tipos, tipo: @tipo, estado: @estado, path: @path} %>
<% when 'Tarifas' %>
	<%= render partial: 'clientes/shw/ndx_tarifas', locals: {objeto: @objeto, estado: @estado, tipo: @tipo, path: @path} %>
<% when 'Documentos' %>
<%= @objeto.nombre_usados %><%= @objeto.archivos_controlados.count %>
	<%= @d_pendientes.count %> <%= @a_pendientes.count %>
	<%= render partial: 'repositorios/shr/ndx_docs', locals: {objeto: @objeto, d_pendientes: @d_pendientes, a_pendientes: @a_pendientes} %>
<% end %>