<h4 class="text-info">
	<i class="bi bi-building"></i> 
	<%= "Cliente : #{@objeto.razon_social} | #{@objeto.d_rut}" %> | 
	<%= link_to "/servicios/organizacion?oid=#{@objeto.id}" do %>
		<i class="bi bi-diagram-3"></i>
	<% end %>
</h4>

<div class="row">
	<div class="col-lg-3 col-xs-12">
		<%= render partial: 'causas/partials/show_archivos', locals: {objeto: @objeto} %>
		<hr>
		<%= render partial: 'causas/partials/show_enlaces', locals: {objeto: @objeto} %>
	</div>
	<div class="col-lg-9">
		<p><%= render partial: 'estados/st_bandejas/partials/change_state', locals: {objeto: @objeto} %></p>
		<%= render partial: '0p/tabs/tabs', locals: { tabs: @tabs, options: @options, token: :menu } %>

		<% if @options[:menu] == 'Causas' %>
			<%= render partial: 'causas/partials/monitor' %>
		<% elsif @options[:menu] == 'Asesorias' %>
			<%= render partial: 'asesorias/partials/monitor' %>
		<% elsif @options[:menu] == 'Facturas' %>
			<%= render partial: 'tarifas/tar_facturas/partials/monitor' %>
		<% elsif @options[:menu] == 'Tarifas' %>

			<div class='row'>
				<div class="col-md-6">
					<h5><%= render partial: '0p/general/icon_text', locals: {gly: 'cash-coin', text: 'Tarifas de Causas', clr: config[:color][:app]} %></h5>
					<%= render partial: '0p/tabla/tabla', locals: {c: 'tar_tarifas'} %>
					<%= render partial: '0p/tabla/ext_btn_nuevo', locals: {o: @objeto, c: 'tar_tarifas', a: 'index', gly: 'plus-circle'} %>
				</div>
				<div class="col-md-6">
					<h5><%= render partial: '0p/general/icon_text', locals: {gly: 'cash-coin', text: 'Tarifas de AsesorÃ­as', clr: config[:color][:app]} %></h5>
					<%= render partial: '0p/tabla/tabla', locals: {c: 'tar_servicios'} %>
					<%= render partial: '0p/tabla/ext_btn_nuevo', locals: {o: @objeto, c: 'tar_servicios', a: 'index', gly: 'plus-circle'}%>
				</div>
			</div>

			
		<% elsif @options[:menu] == 'Documentos y enlaces' %>

			<div class='row'>
				<div class='col-md-6'>
					<h5><%= render partial: '0p/general/icon_text', locals: {gly: 'archive', text: 'Repositorio de la causa', clr: config[:color][:app]} %></h5>

				    <%= render partial: 'repositorios/app_directorios/partials/directorio', locals: {objeto: @objeto.repositorio} %>
				</div>
				<div class='col-md-6'>
					<h5><%= render partial: '0p/general/icon_text', locals: {gly: 'archive', text: 'Enlaces de la causa', clr: config[:color][:app]} %></h5>
					<%= render partial: '0p/tabla/tabla', locals: {c: 'app_enlaces'} %>
				</div>
			</div>

		<% end %>
	</div>
</div>