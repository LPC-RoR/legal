<% @coleccion['tar_facturaciones'].each do |tar_facturacion| %>
	<div class="shadow p-3 mb-1 bg-white rounded">
		<div style="padding-left: 1em">
			<%= render partial: "#{tar_facturacion.owner.class.name.tableize}/partials/encabezado", locals: {objeto: tar_facturacion.owner} %>
		</div>
	</div>
	<div class="shadow p-3 mb-3 bg-white rounded">
	<div class="row">
		<div class="col-lg-6 col-xs-12">
			<div style='padding-left: 1em;'>
				<%= render partial: "#{tar_facturacion.owner.class.name.tableize}/partials/detalle_aprobacion", locals: {objeto: tar_facturacion.owner, facturacion: tar_facturacion} %>
			</div>
		</div>
		<div class="col-lg-6">
			<%= render partial: 'causas/partials/detalle_cuantia', locals: {objeto: tar_facturacion.owner} if tar_facturacion.owner.class.name == 'Causa'%>
		</div>
	</div>
	</div>
<% end %>

