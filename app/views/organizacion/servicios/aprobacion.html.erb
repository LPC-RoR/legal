<div class="cntnt_box">
	<%= render partial: 'organizacion/servicios/aprobacion/encabezado_aprobacion', locals: {objeto: @objeto} %>
</div>

<% @coleccion['tar_calculos'].each do |tar_calculo| %>
	<%= render partial: "tarifas/tar_calculos/shr/titulo_aprobacion", locals: {objeto: tar_calculo} %>

	<div class="cs_box">
		<div class="f_50lft_col">
			<div class="lft">
				<% if tar_calculo.owner.class.name == 'Causa' %>
							<% unless tar_calculo.owner.valores_cuantia.empty? %>
								<%= render partial: 'causas/shr/list_cuantia', locals: {objeto: tar_calculo.owner, porcentaje_cuantia: false, clss: 'ln_vlr_cnt'} %>
							<% end %>
				<% end %>
			</div>
			<div class="rght">
				<%= render partial: 'causas/shw/tarifa_pagos/aprobacion/encabezado', locals: {pago: tar_calculo.tar_pago, owner: tar_calculo.owner} %>

				<% if tar_calculo.tar_pago.requiere_uf == true and uf_fecha(fecha_calculo(tar_calculo.owner, tar_calculo.tar_pago)).blank? %>
					<small><b class="text-danger">UF del dia <%= dma(fecha_calculo(tar_calculo.owner, tar_calculo.tar_pago)) %> no encontrada</b></small>
				<% else %>
					<%= render partial: 'causas/shw/tarifa_pagos/aprobacion/comentarios_pago', locals: {pago: tar_calculo.tar_pago, causa: tar_calculo.owner } %>
				<% end %>
			</div>
		</div>
	</div>

<% end %>

