<%= form_for :estmcn, url: "/causas/#{causa.id}/estmcn" do |form| %>
	<div class="row gx-1">
		<div class="col-9">
			<div class="row gx-1">
				<div class="col-6">
					<%= render partial: '0p/lbld_inpts/select', locals: { form: form, token: :probabilidad, objeto: causa, sel_list: ['Baja', 'Media', 'Alta'], label: 'Rango de probabilidad' } %>
				</div>
				<div class="col-6">
					<%= render partial: '0p/lbld_inpts/number', locals: { form: form, token: :potencial_perdida, objeto: causa, label: 'Potencial pérdida' } %>
				</div>
			</div>
			<%= render partial: '0p/lbld_inpts/text_area', locals: { form: form, token: :estimacion, objeto: causa, label: 'Observación' } %>
		</div>
		<div class="col-3 text-end">
			<button type="submit" class="btn btn-primary">
			  <i class="bi bi-caret-right"></i>
			</button>
		</div>
	</div>
<% end  %>