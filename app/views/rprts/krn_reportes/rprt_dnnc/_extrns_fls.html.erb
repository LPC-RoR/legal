<% acts[ownr.clss_id][:cdgs].each do |act| %>
	
	<div class="row gx-1 text-<%=ClssPrcdmnt.act_lst?(act) ? 'secodary' : 'primary'%>">
		<div class="col-10" style="font-size: <%='0.7rem;' if ClssPrcdmnt.act_lst?(act) %>">
			<% unless mdl.act_lst?(act) or mdl.ref_generated?(act) %>· <% end %>
			<%=ClssPrcdmnt.act_nombre[act]%>
		</div>
		<div class="col-2 text-end">

			<% unless ClssPrcdmnt.act_lst?(act) %>
				<% if acts[ownr.clss_id][act] %>
					<% if acts[ownr.clss_id][act].rlzd? %>
						Revisado
					<% else %>
						PDF
					<% end %>
				<% else %>
					Faltante
				<% end %>
			<% end %>
		</div>
	</div>

	<% if ClssPrcdmnt.act_lst?(act) %>
		<div class="ms-4 text-primary">
			<% acts[ownr.clss_id][act].each do |lst_fl| %>

				<div class="row gx-1">
					<div class="col-10">
						<i class="bi bi-arrow-return-right"></i>
						· <%=lst_fl.nombre%>
					</div>
					<div class="col-2 text-end">
						<% if lst_fl.rlzd? %>
							Revisado
						<% else %>
							PDF
						<% end %>
					</div>
				</div>

			<% end %>
		</div>
	<% end %>

<% end %>
