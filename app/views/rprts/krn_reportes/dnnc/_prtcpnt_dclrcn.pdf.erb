<% if @objeto.evld? %>
	<% pddng = prtcpnt.class.name == 'KrnTestigo' ? 2 : 1 %>
	<% if prtcpnt.krn_declaraciones.empty? %>
		<%= render partial: 'rprts/shrd/tr', locals: {glosa: "Declaración sin agendar.", pddng: pddng} %>
	<% else %>
		<% if prtcpnt.fl?('prtcpnts_dclrcn') %>
			<%= render partial: 'rprts/shrd/tr', locals: {glosa: "Declaración realizada.", pddng: pddng} %>
		<% else %>
			<%= render partial: 'rprts/shrd/tr', locals: {glosa: "Declaración agendada para el día #{dma_hm(prtcpnt.krn_declaraciones.last.fecha)}.", pddng: pddng} %>
		<% end %>
	<% end %>
<% end %>