<!-- PARTICIPANTES -->
<div class="row gx-1 mt-2 mx-5 px-2 border-bottom" style="font-size: 14px;">
	<%= render partial: 'rprts/shrd/tr', locals: {glosa: "Personas denunciantes", fnt_wght: 'bold'} %>

	<% if @coleccion['krn_denunciantes'].any? %>
		<% @coleccion['krn_denunciantes'].each do |dnncnt| %>
			<%= render partial: 'rprts/shrd/tr', locals: {glosa: "#{s_rut(dnncnt.rut)} #{dnncnt.nombre}"} %>
			<% if dnncnt.fl?('dnncnt_diat_diep') %>
				<%= render partial: 'rprts/shrd/tr', locals: {glosa: "Documentación Atención psicológica temprana.", gly: 'chack2-all', pddng: 1} %>
			<% else %>
				<%= render partial: 'rprts/shrd/tr', locals: {glosa: "(pendiente) Documentación Atención psicológica temprana.", gly: 'cone-striped', pddng: 1} %>
			<% end %>
			<%= render partial: 'rprts/krn_reportes/dnnc/prtcpnt_dclrcn', locals: {prtcpnt: dnncnt} %>
			<% if dnncnt.krn_testigos.any? %>
				<%= render partial: 'rprts/shrd/tr', locals: {glosa: "Testigo(s) de la persona denunciante", fnt_wght: 'bold', pddng: 1} %>
				<% dnncnt.krn_testigos.each do |tstg| %>
					<%= render partial: 'rprts/shrd/tr', locals: {glosa: "#{s_rut(tstg.rut)} #{tstg.nombre}", pddng: 1} %>
					<%= render partial: prtl_name(@objeto, 'shw/proceso/reporte', 'prtcpnt_dclrcn'), locals: {prtcpnt: tstg} %>
				<% end %>
			<% end %>
		<% end %>
	<% else %>
		<%= render partial: 'rprts/shrd/tr', locals: {glosa: "Aún no se han igresados personas denunciantes."} %>
	<% end %>
</div>

<div class="row gx-1 mt-2 mx-5 px-2 border-bottom" style="font-size: 14px;">
	<%= render partial: 'rprts/shrd/tr', locals: {glosa: "Personas denunciadas", fnt_wght: 'bold'} %>

	<% if @objt['motivo_vlnc?'] %>
		<%= render partial: 'rprts/shrd/tr', locals: {glosa: "Denuncia por violenciaen el trabajo ejercida por terceros, las personas denunciadas (si las hay) se detallan en la declaracion de la persona denunciante."} %>
	<% else %>
		<% if @coleccion['krn_denunciados'].any? %>
			<% @coleccion['krn_denunciados'].each do |dnncd| %>
				<%= render partial: 'rprts/shrd/tr', locals: {glosa: "#{s_rut(dnncd.rut)} #{dnncd.nombre}"} %>
				<%= render partial: 'rprts/krn_reportes/dnnc/prtcpnt_dclrcn', locals: {prtcpnt: dnncd} %>
				<% if dnncd.krn_testigos.any? %>
					<%= render partial: 'rprts/shrd/tr', locals: {glosa: "Testigo(s) de la persona denunciada", fnt_wght: 'bold', pddng: 1} %>
					<% dnncd.krn_testigos.each do |tstg| %>
						<%= render partial: 'rprts/shrd/tr', locals: {glosa: "#{s_rut(tstg.rut)} #{tstg.nombre}", pddng: 1} %>
						<%= render partial: prtl_name(@objeto, 'shw/proceso/reporte', 'prtcpnt_dclrcn'), locals: {prtcpnt: tstg} %>
					<% end %>
				<% end %>
			<% end %>
		<% else %>
			<%= render partial: 'rprts/shrd/tr', locals: {glosa: "Aún no se han igresados personas denunciadas."} %>
		<% end %>
	<% end %>

</div>