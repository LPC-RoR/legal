<% if @objeto.cntrld? %>
	<h5 class="text-primary"><i class="bi bi-file"></i> <%= @objeto.rep_archivo %></h5>
	<% if @objeto.dc_multiple? %>
		<%= render partial: '0p/lbld_inpts/text', locals: { form: form, token: :nombre, label: 'Nombre del archivo' } %>
	<% end %>
<% else %>
	<%= render partial: '0p/lbld_inpts/text', locals: { form: form, token: :rep_archivo, label: 'Nombre del archivo' } %>
<% end %>

<% if @objeto.control_fecha %>
	<%= render partial: '0p/lbld_inpts/date', locals: { form: form, token: :fecha, label: 'Fecha' } %>
<% end %>

<%= render partial: '0p/lbld_inpts/file', locals: { form: form, token: :archivo } %>

<!-- Se hace porque rep_archivo siempre tiene un valor (?) -->
<% if @objeto.cntrld? %>
	<%= render partial: '0p/lbld_inpts/hidden', locals: { form: form, token: :rep_archivo } %>
<% end %>

<%= render partial: '0p/lbld_inpts/hidden_lst', locals: { form: form, hddn_lst: [:ownr_type, :ownr_id, :rep_doc_controlado_id, :control_fecha, :chequeable] } %>