<div class="col-10">
	<small class="text-muted">
		<!-- Icono de AppDocumento: si es Documento Controlado cambia el Icono -->
		<% if objeto.documento_control %>
			<i class="bi bi-file-check"></i>
		<% else %>
			<i class="bi bi-files"></i> 
		<% end %> 
		<!-- Nombbre de AppDocumento: si hay archivos es link al mÃ¡s reciente -->
		<% if objeto.d_version.present? %>
			<%= link_to objeto.d_version.send('url'), class: 'sb-link', target: :_blank do %>
				<%= objeto.app_documento %>
			<% end %>
		<% else %>
			<%= objeto.app_documento %>
		<% end %>

		<!-- Despliege de Archivos del documento -->
		<% if objeto.d_version.present? %>

			<%= render layout: '0p/collapse/link', locals: {label: 'Archivos', objeto: objeto} do %>
				<i class="bi bi-box-arrow-down"></i>
			<% end %>

		<% end %>

		<!-- Agrega nuevo Archivo al documento -->
		<%= link_to "/app_archivos/new?class_name=AppDocumento&objeto_id=#{objeto.id}", class: 'sb-link', title: 'Nuevo archivo', 'data-toggle' => 'tooltip', 'data-placement' => 'right' do %>
			<% if objeto.archivos.empty? %>
				<i class="bi bi-plus-circle text-danger"></i>
			<% else %>
				<i class="bi bi-plus-circle"></i>
			<% end %>
		<% end %>
	</small>

	<% if objeto.d_version.present? %>
		</br>
		<%= render layout: '0p/collapse/display', locals: {label: 'Archivos', objeto: objeto} do %>
			<%= render partial: 'repositorios/app_documentos/list/display_archivos', locals: {objeto: objeto} %>
		<% end %>
	<% end %>
</div>
<div class="col-2" align="right">
	<small><small>
		<% unless objeto.documento_control and crud_conditions(objeto, 'Editar') == true %>
			<%= render partial: '0p/tabla/link_editar', locals: {objeto: objeto} %>
		<% end %>
		<% if objeto.archivos.empty? and crud_conditions(objeto, 'Eliminar') %>
			<%= render partial: '0p/tabla/link_eliminar', locals: {objeto: objeto} %>
		<% end %>
	</small></small>		
</div>