<% unless @coleccion['app_archivos'].empty? and pendientes.empty? %>
<div class="shadow p-3 mb-3 bg-white rounded">
<div class="row">
	<div class="col-lg-6">
		<% @coleccion['app_archivos'].each do |archivo| %>
			<%= render partial: get_partial(archivo.class.name.tableize, 'list', "lobjeto") , locals: {objeto: archivo} %>
		<% end %>
	</div>
	<div class="col-lg-6">
		<% unless pendientes.empty? %>
			<small><p class="text-info">Control archivos</p></small>
			<% pendientes.each do |archivo_pendiente| %>
				<small class="text-muted">
				<%= link_to "/#{@objeto.class.name.tableize}/#{@objeto.id}/crea_archivo_controlado?indice=#{archivo_pendiente}", title: 'Crea archivo vacÃ­o', 'data-toggle' => 'tooltip', 'data-placement' => 'right' do %>
					<i class="bi bi-arrow-bar-left"></i>
				<% end %> 
				<%= archivo_pendiente %></br>
				</small>
			<% end %>
		<% end %>
	</div>
</div>
</div>
<% end %>