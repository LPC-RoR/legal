<tr class="table-<%=table_row_type(objeto)%>">

	<td colspan='2'>
		<i class="bi bi-folder2"></i> <small>
			<%= link_to( objeto.app_directorio, objeto, class: 'sb-link') %>
		</small> <% if objeto.directorio_control %>
			<i class="bi bi-lock"></i>
		<% end %>
	</td>

	<td>
		<%= render partial: '0p/tabla/btn_editar', locals: {objeto: objeto} unless objeto.control? %>
		<% if not has_child?(objeto) %>
			<%= render partial: '0p/tabla/btn_eliminar', locals: {objeto: objeto} if objeto.archivos.empty? %>
		<% end %>
	</td>

</tr>