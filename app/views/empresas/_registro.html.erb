    <div class="text-center">
      <h4 class="mb-2 pt-1">Versión demo personalizada</h4>
    </div>
  </div>
  
  <div class="card-body p-4">
    <%= form_with(model: @objeto, url: register_path, data: { turbo: false }, local: true, class: "needs-validation", novalidate: true) do |f| %>
      
      <!-- Información de la Empresa -->
      <div class="mb-5">
        <h5 class="text-primary mb-3">
          Registro de versión demostrativa
        </h5>
        
        <div class="row">
          <div class="col-md-12 mb-2">
            <div class="form-floating">
              <%= f.text_field :razon_social, class: "form-control", placeholder: "Nombre de la empresa", required: true %>
              <%= f.label :razon_social, "Nombre de la Empresa *" %>
