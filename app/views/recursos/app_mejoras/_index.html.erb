<% unless @coleccion['app_mejoras'].empty? %>
	<% @coleccion['app_mejoras'].each do |mej| %>
		<small><small><b><%= mej.app_perfil.email %></b> <%= dma(mej.app_perfil.created_at) %></small></small></br>
		<small><%= sanitize simple_format(mej.detalle) %></small>
		<% if mej.app_perfil.id == perfil_activo_id %>
			<%= render partial: '0p/tabla/btns', locals: {a: 'index', objeto: mej} %>
		<% end %>
		<hr>
	<% end %>
<% end %>
