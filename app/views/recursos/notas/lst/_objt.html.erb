<%# if prrdds or blue_dot %>
	<%= render partial: '0p/clr_point', locals: {clr: objeto.prioridad} if prrdds %>
	<% if blue_dot %>
	<%= render partial: '0p/clr_point', locals: {clr: 'primary'} unless objeto.realizado %>
	<% end %>
	<!--i class="bi bi-dot"></i-->
<%# end %>

<!--i class="bi bi-cone-striped text-<%#= objeto.realizado ? 'muted' : objeto.prioridad%>"></i-->
<%= dma_hm(objeto.created_at) %>
<i class="bi bi-dot"></i>

<% if objeto.ownr.class.name == 'Causa' and controller_name == 'publicos' %>
	<%= objeto.ownr.causa %>
<% end %>

<%= render layout: '0p/collapse/link', locals: {label: 'Participantes', objeto: objeto, tooltip: 'Participantes'} do %>
	<% if objeto.age_usuarios.any? %>
		<i class="bi bi-person-check text-primary"></i>
	<% else %>
		<i class="bi bi-person-exclamation text-danger"></i>
	<% end %>
<% end %>

<%= render layout: '0p/collapse/link', locals: {label: 'Detalle', objeto: objeto, tooltip: 'Detalle'} do %>
	<i class="bi bi-arrow-bar-down text-primary"></i>
<% end %>
