<% muted ||= false %>
<div class="row mt-1 px-2 app_lnk" style="font-size: 0.7rem; line-height: 1.5;">
	<div class="col">
		<% if objeto.age_usuarios.any? %>
			<i class="bi bi-caret-right"></i> 
			<% objeto.age_usuarios.each do |usr| %>
				<i class="bi bi-dot"></i> 
				<%= usr.age_usuario %>
				<% unless muted %>
					<%= render layout: '0p/tltp_lnk', locals: {lnk: "/#{cntrllr(objeto)}/#{objeto.id}/dssgn_usr?oid=#{usr.id}", tltp: "Elimina participante", data: {turbo_method: :post}} do %>
						<i class="bi bi-x-circle"></i>
					<% end %>
				<% end %>
			<% end %>
		<% else %>
			<div class="text-danger"><i class="bi bi-exclamation-diamond"></i> Nota sin participantes</div>
		<% end %>
	</div>
	<div class="col text-end">
		<% unless muted %>
			<%= render layout: '0p/collapse/link', locals: {label: cntrllr(objeto), objeto: objeto, tooltip: 'Agrega participante'} do %>
				<i class="bi bi-plus-circle"></i>
			<% end %>
		<% end %>
	</div>
</div>
<% unless muted %>
	<%= render layout: '0p/collapse/display', locals: {label: cntrllr(objeto), objeto: objeto} do %>
		<%= render partial: "actividades/shr/usr_slct", locals: {objeto: objeto} %>
	<% end %>
<% end %>