<tr class="app_lnk" style="font-size: 1rem;line-height: 1.5;">
	<td class="ps-3">
		<i class="bi bi-person-square text-<%=objt.app_perfil.blank? ? 'danger' : 'info' %>"></i> 
		<%= objt.nombre %>
		<small>
			<% unless objt.tipo.blank? %>
				<i class="bi bi-dot"></i>
				<i class="bi bi-bookmark"></i>
				<%= objt.tipo %>
			<% end %>
		<!--/br-->
			<i class="bi bi-arrow-right"></i>
			<i class="bi bi-person<%='-circle' if objt.tipo == 'admin'%>"></i>
			<%= email_mask(objt.email) %> 
		</small>
	</td>
	<td class="pe-3 text-end">
		<%= render partial: '0p/tbl/plldwn_lnks', locals: {objt: objt} %>
	</td>
</tr>