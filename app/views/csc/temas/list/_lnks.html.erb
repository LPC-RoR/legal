<!-- ORDEN -->
<% if objeto.causa.hechos_registrados %>
	<b><%= objeto.orden %></b>
<% else %>
	<b><%= render partial: '0p/tbl/ordr', locals: {objeto: objeto } %></b>
<% end %>

<% unless objeto.causa.hechos_registrados %>
	<i class="bi bi-dot"></i>
	<%= render partial: '0p/tbl/lnk_new', locals: {source: 'hechos', ownr: objeto, txt: 'Hecho'} %>
	<i class="bi bi-dot"></i>
	<small><%= render partial: '0p/tbl/lnks_e', locals: {objeto: objeto} %></small>
<% end %>