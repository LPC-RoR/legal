<div class="tm">
	<div class="tm_ttl">
		<div class="ttl_ttl">
			<i class="bi bi-bookmark-fill"></i>
			
			<%= objeto.tema %>
			<!-- cllps descripcion -->
			<% unless objeto.descripcion.blank? %>
				<%= render layout: '0p/collapse/link', locals: {label: 'Descripcion', objeto: objeto, tooltip: 'DescripciÃ³n'} do %>
					<i class="bi bi-box-arrow-down"></i> 
				<% end %>
			<% end %>
		</div>
		<div class="ttl_lnks">
			<!-- orden -->
			<% unless objeto.causa.hechos_registrados %>
				<%= render partial: '0p/tabla/orderer', locals: {objeto: objeto } %>
			<% end %>
			<i class="bi bi-dot"></i>
			<% unless objeto.causa.hechos_registrados %>
				<%= render layout: '0p/layout/tooltip_link', locals: { link: "/hechos/new?tid=#{objeto.id}", tooltip: 'Nuevo Hecho'} do %>
					<i class="bi bi-plus-circle"></i>
				<% end %>
				<i class="bi bi-dot"></i>
				<small><%= render partial: '0p/tabla/links_e', locals: {objeto: objeto} %></small>
			<% end %>
		</div>
	</div>
	<% unless objeto.descripcion.blank? %>
		<%= render layout: '0p/collapse/display', locals: {label: 'Descripcion', objeto: objeto} do %>
			<i class="text-muted"><%= objeto.descripcion %></i>
		<% end %>
	<% end %>
	<% unless objeto.hechos.empty? %>
		<% objeto.hechos.order(:orden).each do |hecho| %>
			<%= render partial: 'csc/hechos/list/innr_bjt', locals: {objeto: hecho} %>
		<% end %>
	<% end %>
</div>