<div class="g_cllps">
	<h6>Agregar archivo</h6>
	<%= form_for :nuevo_archivo, url: "/hechos/#{objeto.id}/nuevo_archivo" do |form| %>

		<div class="form-inline">
			<%= render partial: '0p/lbld_inpts/text', locals: {form: form, token: :nombre, label: 'Nombre del archivo'} %>
			
			<button type="submit" class="btn btn-info">
