<div class="g_cllps">
	<h6>Agrega archivo</h6>
	<%= form_for :nuevo_archivo, url: "/causas/#{objeto.id}/input_nuevo_archivo" do |form| %>

		<%= render partial: '0p/form_fields/label', locals: { form: form, token: :app_archivo, label: 'Nombre del archivo' } %>
		</br>
		<div class='form-inline'>

			<%= render partial: '0p/form_fields/text', locals: { form: form, token: :app_archivo } %>

			<button type="submit" class="btn btn-info">
			  <i class="bi bi-caret-right icon-white"></i>
			</button>

		</div>
	<% end  %>
</div>