<div alig='center'>
	<small class="text-info">Contestación</small></br>
	<small>
	<% unless objeto.st_contestacion.blank? %>
		<%= render layout: '0p/tltp_lnk', locals: { lnk: "/hechos/#{objeto.id}/set_evaluacion?c=c&e=nil", tltp: 'sin evaluacion' } do %>
			<i class="bi bi-circle-fill text-dark"></i>
		<% end %>
	<% end %>
