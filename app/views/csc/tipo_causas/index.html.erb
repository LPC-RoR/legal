<p id="notice"><%= notice %></p>

<h1>Tipo Causas</h1>

<table>
  <thead>
    <tr>
      <th>Tipo causa</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tipo_causas.each do |tipo_causa| %>
      <tr>
        <td><%= tipo_causa.tipo_causa %></td>
        <td><%= link_to 'Show', tipo_causa %></td>
        <td><%= link_to 'Edit', edit_tipo_causa_path(tipo_causa) %></td>
        <td><%= link_to 'Destroy', tipo_causa, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

