<div class="row gx-1 mx-1 py-1 px-2 border rounded-4">
	<div class="col-8">
		<% if objeto.articulo_516 %>
			<i class="bi bi-mailbox-flag text-primary"></i> Notificaciones se envían por correo certificado.
		<% elsif objeto.email.blank? %>
			<i class="bi bi-cone-striped text-danger"></i> El correo electrónico del participante no se ha ingresado.
		<% else %>
			<% if objeto.email != objeto.email_ok and (not @acts_hsh[objeto.clss_id][:rlzds].objt_rlzd?(objeto, 'verificar_email')) %>
				<i class="bi bi-cone-striped text-danger"></i> 
				<%= ClssPrcdmnt.act_nombre['verificar_email'] %>
				<!-- NO se han enviado emails de verificación -->
				<% unless objeto.n_vrfccn_lnks.blank? %>
					<%=objeto.n_vrfccn_lnks%><i class="bi bi-dot"></i><%=dma(objeto.fecha_vrfccn_lnk)%>
				<% end %>		
			<% else %>
				<% if @acts_hsh[objeto.clss_id][:rlzds].objt_rlzd?(objeto, 'verificar_email') %>
					<i class="bi bi-clipboard-check text-primary"></i>
				<% end %>
				<% if objeto.verified? %>
					<i class="bi bi-at text-primary"></i>
				<% end %>
				<span class="text-primary">[CONFIDENCIAL: <%="EMAIL-#{objeto.sym.to_s.upcase}-#{objeto.id}"%>]</span>
			<% end %>
		<% end %>
	</div>
	<div class="col-4 text-end app_lnk">
		<% unless objeto.articulo_516 or objeto.email.blank? %>
			<% if objeto.email != objeto.email_ok and (not @acts_hsh[objeto.clss_id][:rlzds].objt_rlzd?(objeto, 'verificar_email')) %>
				<%= render partial: 'repositorios/check_realizados/rlzbl', locals: {hsh: @acts_hsh, act_id: objeto.clss_id, ownr: objeto, act: 'verificar_email'} %>
				<%= link_to send_verification_email_path(model_type: objeto.class.name.tableize, id: objeto.id),  
				            data: { turbo_method: :post, turbo_confirm: 'Verificar envio de email' } do %>  
				  <i class="bi bi-envelope-at"></i> <%= objeto.n_vrfccn_lnks.blank? ? 'Enviar' : 'Reenviar' %>
				<% end %>
			<% else %>
				<% if objeto.verified? %>
					 <b>verificado!</b>
				<% else %>
					<%= render partial: 'repositorios/check_realizados/rlzd', locals: {hsh: @acts_hsh, act_id: objeto.clss_id, ownr: objeto, act: 'verificar_email'} %>
				<% end %>
			<% end %>
		<% end %>
	</div>
</div>