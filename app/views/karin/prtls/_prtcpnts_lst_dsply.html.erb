<% if objeto.dnnc.investigadores? and objeto.dnnc.evld? %>
	<% unless objeto.declaraciones? %>
		<%= render partial: '0p/ntc', locals: {color: 'danger', ntc: 'Particiapante sin declaraciones.'} %>
	<% end %>
<% end %>

<% if objeto.empleado_externo and (not objeto.empleador?) %>
	<%= render partial: '0p/ntc', locals: {color: 'danger', ntc: 'Falta identificar el empleador del denunciante.'} %>
<% end %>

<% if objeto.articulo_516 and (not objeto.direccion_notificacion?) %>
	<%= render partial: '0p/ntc', locals: {color: 'danger', ntc: 'La persona denunciante no tiene acceso a correo electrónico, se debe registrar su dirección de notificación.'} %>
<% end %>

<% if objeto.articulo_4_1 and ( not objeto.dnnc.on_dt? ) %>
	<%= render partial: '0p/ntc', locals: {color: 'primary', ntc: 'Aplica el artículo 4 inciso primero del Código del Trabajo: La denuncia debe ser derivada a la Dirección del Trabajo.'} %>
<% end %>