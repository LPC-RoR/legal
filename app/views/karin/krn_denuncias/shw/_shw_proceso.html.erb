<%= render partial: prtl_name(objeto, 'shw/proceso', 'drvcns_invstgdrs'), locals: {ownr: objeto} %>

<%= render partial: prtl_name(objeto, 'shw/proceso', 'etapa_tarea'), locals: {ownr: objeto} %>

