<%= render partial: prtl_name(objeto, 'shw/proceso', 'mssgs_tsk'), locals: {ownr: objeto} %>
<%= render partial: prtl_name(objeto, 'shw/proceso', 'tsk_dsply'), locals: {ownr: objeto} %>

<div class="pt-2" style="margin-left: 5%;">
	<%= render partial: 'notas/shr/notas', locals: {ownr: objeto} %>
</div>

<div class="mx-1 my-2 border rounded-4">
	<div class="p-2 border-bottom fw-bold" style="font-size: 1rem;">
		<i class="bi bi-caret-right-fill"></i> Documentos controlados de la denuncia
	</div>
	<div class="py-2 px-3">
		<%= render partial: 'repositorios/act_archivos/dsply_list', locals: {hsh: @acts_hsh, mdl: ClssPrcdmnt, ownr: objeto, lnks: true} %>
	</div>
</div>

<div class="mx-1 my-2 border rounded-4">
	<div class="p-2 border-bottom fw-bold" style="font-size: 1rem;">
		<i class="bi bi-caret-right-fill"></i> Documentos combinados
	</div>
	<div class="py-2 px-3">
		<% if @combinados.empty? %>
			No se han generado archivos combinados
		<% end %>
		<% @combinados.each do |cmbnd| %>
			<div class="row gx-1 objt_lnk">
				<div class="col-10"><%= cmbnd.nombre %></div>
				<div class="col-2 text-end">
					<%= render layout: '0p/tltp_lnk', locals: {lnk: "/act_archivos/#{cmbnd.id}/download", tltp: "Bajar #{cmbnd.nombre}", target: '_blank'} do %>
						<i class="bi bi-download"></i>
					<% end %>
					<%= render partial: '0p/tbl/lnk_eliminar', locals: {objeto: cmbnd} if admin? %>
				</div>
			</div>
		<% end %>
	</div>
</div>