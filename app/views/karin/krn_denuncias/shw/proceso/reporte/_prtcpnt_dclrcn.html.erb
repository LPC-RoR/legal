<% if @objeto.dnnc_evld? %>
	<% pddng = prtcpnt.class.name == 'KrnTestigo' ? 2 : 1 %>
	<% if prtcpnt.krn_declaraciones.empty? %>
		<%= render partial: '0p/proc/ln', locals: {glosa: "Declaración sin agendar", pddng: pddng} %>
	<% else %>
		<% if prtcpnt.fl?('prtcpnts_dclrcn') %>
			<%= render partial: '0p/proc/ln', locals: {glosa: "Declaración realizada", pddng: pddng} %>
		<% else %>
			<%= render partial: '0p/proc/ln', locals: {glosa: "Declaración agendada para el día #{dma_hm(prtcpnt.krn_declaraciones.last.fecha)}", pddng: pddng} %>
		<% end %>
	<% end %>
<% end %>