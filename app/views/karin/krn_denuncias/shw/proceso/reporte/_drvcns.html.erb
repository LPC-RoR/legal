<!-- DERIVACIONES -->
<% if @coleccion['krn_derivaciones'].any? %>
	<%= render partial: '0p/proc/ln', locals: {glosa: "DERIVACIONES", valor: nil, bld: true} %>
	<% @coleccion['krn_derivaciones'].each do |drvcn| %>
		<%= render partial: '0p/proc/ln', locals: {glosa: "#{drvcn.motivo}", valor: "#{dma(drvcn.fecha)}", pddng: 1} %>
	<% end %>
<% end %>

<!-- INVESTIGACIONES EN LA EMPRESA -->
<% if objeto.investigacion_local %>
	<%= render partial: '0p/proc/ln', locals: {glosa: "La empresa decide realizar la investigación de la denuncia."} %>
<% end %>
<% if objeto.investigacion_externa %>
	<%= render partial: '0p/proc/ln', locals: {glosa: "La empresa externa decide realizar la investigación de la denuncia.", bld: true} %>
<% end %>