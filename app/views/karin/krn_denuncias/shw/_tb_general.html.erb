<div class="shw_bx">
	<%= render partial: prtl_name('krn_denuncias', 'shw', 'shw_lst'), locals: {objeto: objeto} %>
	<%= render partial: prtl_name('repositorios', 'shr', 'dcs'), locals: {objeto: objeto, mdl: 'KrnDenuncia'} %>
</div>


<%= render partial: '0p/general/ttl_indx', locals: {cntrllr: 'krn_denunciantes', ttl: "Persona(s) denunciante(s)", ownr: objeto} %>
<%= render partial: '0p/tabla/tabla', locals: {c: 'krn_denunciantes'} %>

<%= render partial: '0p/general/ttl_indx', locals: {cntrllr: 'krn_denunciados', ttl: "Persona(s) denunciada(s)", ownr: objeto} %>
<%= render partial: '0p/tabla/tabla', locals: {c: 'krn_denunciados'} %>

<%= render partial: prtl_name('krn_denuncias', 'shw', 'qstns'), locals: {objeto: objeto} %>

<% if objeto.krn_derivaciones.any? %>
	<%= render partial: '0p/general/ttl_ttl', locals: {cntrllr: 'krn_derivaciones', ttl: "Derivación(es)", ownr: objeto} %>
	<%= render partial: '0p/tabla/tabla', locals: {c: 'krn_derivaciones'} %>
<% end %>

<% if objeto.e_optn? %>
	<%= render partial: '0p/actv_bx/q_and_a', locals: {objeto: objeto, code: 'invstgdr', accn: 'Selección', cndtn: objeto.invstgdr?, c: 'krn_denuncias', trsh: (not objeto.leida?)} %>
<% end %>

<% if objeto.invstgdr? %>
	<%= render partial: '0p/actv_bx/q_and_a', locals: {objeto: objeto, code: 'leida', accn: 'Confirmación', cndtn: objeto.leida?, c: 'krn_denuncias', trsh: objeto.no_eval?} %>
	<% if objeto.leida? %>
		<%= render partial: '0p/actv_bx/q_and_a', locals: {objeto: objeto, code: 'incnsstnt', accn: 'Selección', cndtn: objeto.incnsstnt_ok?, c: 'krn_denuncias', trsh: true} %>
		<%= render partial: '0p/actv_bx/q_and_a', locals: {objeto: objeto, code: 'incmplt', accn: 'Selección', cndtn: objeto.incmplt_ok?, c: 'krn_denuncias', trsh: true} %>
	<% end %>
<% end %>

<% if objeto.eval? %>
	<% @coleccion['krn_denunciantes'].each do |dnncnt| %>
	<% end %>
	<% @coleccion['krn_denunciados'].each do |dnncnt| %>
	<% end %>
<% end %>