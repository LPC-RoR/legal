<div style="margin-left: 7%;">
	<%= render partial: '0p/prtls/dsply', locals: {objt: @objeto, dir: 'shw/shr', prtl: 'prlg'} %>

	<%= render partial: 'cuentas/indx/ttl', locals: {source: 'krn_denunciantes', ownr: @objeto, fs: 6} %>
	<%= render partial: '0p/tbl/tbl', locals: {source: 'krn_denunciantes', shdw: false, typ: 'ln', crud: 'lnks'} %>


	<!-- DENUNCIANTES OK Y MOTIVO DISTINTO DE VIOLENCIA -->
	<% if @objt['motivo_vlnc?'] %>

		<%= render partial: '0p/ntc', locals: {color: 'danger', ntc: 'Denuncia de violencia en el trabajo ejercida por terceros. Las personas denunciadas (si las hay) se detallan en las declaraciones.'} %>

	<% else %>

		<%= render partial: 'cuentas/indx/ttl', locals: {source: 'krn_denunciados', ownr: @objeto, fs: 6} %>
		<% if @objt['denunciantes?'] %>
			<%= render partial: '0p/tbl/tbl', locals: {source: 'krn_denunciados', shdw: false, typ: 'ln', crud: 'lnks'} %>
		<% end %>

	<% end %>

</div>


<div class="text-end" style="font-size: 14px;">
	<% if prtl?(@objeto, 'hlp', 'prtcpnts') %>
		<%= render layout: '0p/mdl/modal', locals: {cdg: "hlp_prtcpnts", ttl: "Registros de Participantes", sz: 'lg'} do %>
			<%= render partial: prtl_name(@objeto, 'hlp', 'prtcpnts') %>
		<% end %>
	<% end %>

	<% if prtl?('karin', 'prtls', 'prtcpnts_hlp_tstgs') and controller_name != 'krn_denuncias' %>
		<%= render layout: '0p/mdl/modal', locals: {cdg: "hlp_tstgs", ttl: "Testigos del participante", sz: 'lg'} do %>
			<%= render partial: prtl_name('karin', 'prtls', 'prtcpnts_hlp_tstgs') %>
		<% end %>
	<% end %>
</div>