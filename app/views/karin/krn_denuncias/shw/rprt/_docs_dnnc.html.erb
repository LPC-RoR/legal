<div class="rprt_bx">
	<div class="rprt_bx_ttl" style="font-size: 1rem;">Documentos controlados de la denuncia</div>
	<div class="ps-3">

<% @acts_hsh[@ownr.clss_id][:cdgs].each do |act| %>

	<div class="row gx-1 text-<%=ClssPrcdmnt.act_lst?(act) ? 'secodary' : 'primary'%>">
		<div class="col-10 <%='fw-bold' if ClssPrcdmnt.act_lst?(act) %>">
			<%=ClssPrcdmnt.act_nombre[act]%>
		</div>
		<div class="col-2 text-end">
			<% unless ClssPrcdmnt.act_lst?(act) %>
				<% if @acts_hsh[@ownr.clss_id][act] %>
					<% if @acts_hsh[@ownr.clss_id][act].rlzd? %>
						Verificado
					<% else %>
						Subido
					<% end %>
				<% else %>
					Faltante
				<% end %>
			<% end %>
		</div>
	</div>

	<% if ClssPrcdmnt.act_lst?(act) %>
		<div class="ms-3 text-primary">
			<% @acts_hsh[@ownr.clss_id][act].each do |lst_fl| %>
				<div class="row gx-1">
					<div class="col-10">
						<i class="bi bi-arrow-return-right"></i>
						<%=lst_fl.nombre%>
					</div>
					<div class="col-2 text-end">
						<% if lst_fl.rlzd? %>
							Verificado
						<% else %>
							Subido
						<% end %>
					</div>
				</div>
			<% end %>
		</div>
	<% end %>

<% end %>

	</div>
</div>

