<% if @combinados.empty? %>
	No se han generado archivos combinados
<% end %>
<% @combinados.each do |cmbnd| %>
	<div class="row gx-1 objt_lnk">
		<div class="col-10"><%=dma_hm(cmbnd.created_at)%><%= cmbnd.nombre %></div>
		<div class="col-2 text-end app_lnk">
			<%= render layout: '0p/tltp_lnk', locals: {lnk: "/act_archivos/#{cmbnd.id}/download", tltp: "Bajar #{cmbnd.nombre}"} do %>
				<i class="bi bi-download"></i>
			<% end %>
			<%= render partial: '0p/tbl/lnk_eliminar', locals: {objeto: cmbnd} if current_usuario.admin? %>
		</div>
	</div>
<% end %>