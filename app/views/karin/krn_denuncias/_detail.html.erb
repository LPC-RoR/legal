<div class='form-row'>
	<%= render partial: '0p/frm_flds/select_id', locals: { form: form, token: :ownr_id, colection: Cliente.where(estado: 'activo').order(:razon_social).collect { |cliente| [cliente.razon_social, cliente.id] }, display_field: 'cliente', prompt: nil, label: 'Cliente' } %>

	<%= render partial: '0p/frm_flds/select_id', locals: { form: form, token: :motivo_denuncia, colection: KrnDenuncia::MOTIVOS, display_field: 'motivo_denuncia', prompt: nil, label: 'Motivo de la denuncia' } %>
	<%= render partial: '0p/frm_flds/select_id', locals: { form: form, token: :receptor_denuncia, colection: KrnDenuncia::RECEPTORES, display_field: 'receptor_denuncia', prompt: nil, label: 'Receptor de la denuncia' } %>
</div>
<div class='form-row'>
	<%= render partial: '0p/frm_flds/radio', locals: { form: form, token: :presentado_por, radio_list: ['Denunciante', 'Representante'], label: 'Presentada por:' } %>
	<%= render partial: '0p/frm_flds/radio', locals: { form: form, token: :via_declaracion, radio_list: ['Denuncia presencial', 'Correo electrónico'], label: 'Vía:' } %>
	<%= render partial: '0p/frm_flds/radio', locals: { form: form, token: :tipo_declaracion, radio_list: ['Escrita', 'Verbal'], label: 'Tipo:' } %>
</div>

<%= render partial: '0p/form_fields/hidden', locals: { form: form, token: :ownr_type } %>
