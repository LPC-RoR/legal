<%= render partial: '0p/proc/rgstr_tr', locals: {glosa: objeto.ownr.class.name, valor: objeto.ownr_razon_social} %>
<%= render partial: '0p/proc/rgstr_tr', locals: {glosa: "Fecha y hora de la recepción", valor: objeto.fecha_hora.blank? ? '__-__-__ __:__' : objeto.fecha_hora.strftime("%d-%m-%Y  %I:%M%p"), align: 'right'} %>
<%= render partial: '0p/proc/rgstr_tr', locals: {glosa: "Motivo de la denuncia", valor: objeto.motivo_denuncia} %>
<%= render partial: '0p/proc/rgstr_tr', locals: {glosa: "Receptor de la denuncia", valor: objeto.receptor_denuncia} %>
<% if objeto.receptor_denuncia == 'Empresa externa' %>
	<%= render partial: '0p/proc/rgstr_tr', locals: {glosa: "Empresa que recibió la denuncia", valor: objeto.krn_empresa_externa.razon_social} %>
<% end %>

<%= render partial: '0p/proc/rgstr_tr', locals: {glosa: "Canal de la denuncia", valor: objeto.via_declaracion} %>
<% if objeto.via_declaracion == 'Presencial' %>
	<%= render partial: '0p/proc/rgstr_tr', locals: {glosa: "Denuncia presentada en forma", valor: objeto.tipo_declaracion} %>
<% end %>

<%= render partial: '0p/proc/rgstr_tr', locals: {glosa: "Presentado por", valor: objeto.presentado_por} %>
<% if objeto.presentado_por == 'Representante' %>
	<%= render partial: '0p/proc/rgstr_tr', locals: {glosa: "Denunciante representado por", valor: objeto.representante} %>
<% end %>