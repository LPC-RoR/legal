<% if tab_proceso? %>
	<%= render layout: 'karin/krn_denuncias/shw/proceso/tsk_tmplt', locals: {ttl: 'Tareas de cierre de la recepción de la denuncia', gly: 'lightbulb'} do %>

		<ol>
			<% unless @objeto.dnnc? %>
				<li>Suba la dennuncia a la plataforma.</li>
			<% end %>

			<% if @objeto.rcp_dt? %>
				<li>Registre la fecha en la cual se recibió la notificación de recepción de denuncia desde la Dirección del Trabajo. </li>
			<% end %>
			<% if (@objeto.dnnc.investigacion_local or @objeto.investigacion_externa) %>
				<li>Registre la fecha en la cual se informó a la Dirección del Trabajo el inicio de la investigación. </li>
			<% end %>
			<% if @objeto.krn_derivaciones.on_dt? %>
				<li>Registre la fecha en la cual se recibió el certificado de recepción de derivación desde la Dirección del Trabajo. </li>
			<% end %>
		</ol>

		<% if @objeto.rcp_dt? %>
			<%= render partial: '0p/proc/etp_frm', locals: {etp: @kproc.etapa, objeto: @objeto, code: 'fecha_ntfccn'} %>
		<% end %>

		<% if (@objeto.dnnc.investigacion_local or @objeto.investigacion_externa) %>
			<%= render partial: '0p/proc/etp_frm', locals: {etp: @kproc.etapa, objeto: @objeto, code: 'fecha_trmtcn', plz_fld: true} %>
		<% end %>

		<% if @objeto.krn_derivaciones.on_dt? %>
			<%= render partial: '0p/proc/etp_frm', locals: {etp: @kproc.etapa, objeto: @objeto, code: 'fecha_hora_dt'} %>
		<% end %>

	<% end %>
<% end %>