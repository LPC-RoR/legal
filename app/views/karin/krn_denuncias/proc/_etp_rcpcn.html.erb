<% unless tipo_usuario == 'investigador' %>

	<!-- Despliegue de DERIVACIONES e INVESTIGADORES -->
	<%= render partial: prtl_name(@objeto, 'shw/proceso', 'drvcns_invstgdrs') %>

	<!-- Sí se cumplen condiciones para el cierre muestra el cierre de la recepción -->
	<% if @objt['get_crr_rcpcn?'] %>
		<%= render partial: prtl_name(@objeto, "proc/#{@etp_last.codigo}", 'tsk_crr') %>
	<% else %>
		<%= render partial: prtl_name(@objeto, "proc/#{@etp_last.codigo}", 'tsk_drvcns') %>
	<% end %>

<% else %>
	<%= render partial: prtl_name(@objeto, 'mssgs', 'usr_error') %>
<% end %>