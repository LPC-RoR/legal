<% unless tipo_usuario == 'investigador' %>
	<%= render partial: prtl_name(@objeto, 'shw/proceso', 'drvcns_invstgdrs') if @objeto.solicitud_denuncia %>

	<% if @objt['rcp_externa?'] and @objt['derivaciones'].empty? and ( not @objt['externa?'] ) %>
		<!-- DERIVACIÓN DESDE EMPRESA EXTERNA -->
		<%= render partial: '0p/proc/task_dsply', locals: {tsk: '030_drvcns', cdg: 'drvcn_desde_extrn'} %>
	<% end %>

	<!-- La denuncia puede estar en la empresa o en una empresa externa -->
	<!-- Si está en una empresa externa, es su responsabilidad investigar: seguimiento -->
	<% unless @objt['on_dt?'] %>
		<% if @objt['on_empresa?'] and @objt['externa?'] %>
			<!-- Se recibió en la EMPRESA una denuncia de EMPRESA EXTERNA -->
			<%= render partial: '0p/proc/task_dsply', locals: {tsk: '030_drvcns', cdg: 'drvcns_dnnc_extrn'} %>
		<% else %>
			<%# if  (not @objeto.solicitud_denuncia) %>
				<% if @objt['artcl41?'] %>
					<!-- Para alguno de los participantes aplica el Artículo 4:1 -->
					<%= render partial: '0p/proc/task_dsply', locals: {tsk: '030_drvcns', cdg: 'drvcn_art41'} %>
				<% else %>
					<% unless @objeto.solicitud_denuncia %>
						<% if @objt['verbal?'] and @objeto.dnncnt_info_oblgtr != true %>
							<!-- ENTREGA DE INFORMACIÓN -->
							<%= render partial: '0p/proc/task_dsply', locals: {tsk: '030_drvcns', cdg: 'info_oblgtr'} %>
						<% else %>
							<% unless @objt['derivaciones?'] or @objeto.dnncnt_investigacion_local %> 
								<!-- OPCIONES DENUNCIANTE -->
								<%= render partial: '0p/proc/task_dsply', locals: {tsk: '030_drvcns', cdg: 'opcns_dnncnt'} %>
							<% else %>
								<!-- OPCIONES EMPRESA Y EMPRESA EXTERNA -->
								<%= render partial: '0p/proc/task_dsply', locals: {tsk: '030_drvcns', cdg: 'opcns_emprs_y_extrn'} %>
								<%#= render partial: prtl_name(@objeto, 'proc/030_drvcns', 'opcns_emprs_y_extrn') %>
							<% end %>
						<% end %>
					<% end %>

				<% end %>
			<%# end %>
		<% end %>
	<% end %>

<% else %>
	<%= render partial: prtl_name(@objeto, 'mssgs', 'usr_error') %>
<% end %>


