<!-- LISTA DE DERIVACIONES -->
<!-- Se despliegan aunque falte información -->
<!-- para poder registrar voluntad de derivar del denunciante -->
<% if @objeto.derivaciones? %>
    <%= render partial: '0p/ttl_sub_tbl', locals: {source: 'krn_derivaciones', ownr: @objeto, lnks: 'prtl'} %>
	<%= render partial: '0p/tbl/tbl', locals: {source: 'krn_derivaciones', crud: 'lnks'} %>
<% end %>

<% if @objeto.externa? %>
	<%= render partial: '0p/ntc', locals: {color: 'dark', gly: 'check-lg', ntc: "Denuncia debe ser investigada por el empleador de los participantes"} %>
<% end %>
<% if @objeto.rgstrs_ok? %>
	<%= render partial: '0p/ntc', locals: {color: 'primary', gly: 'check-lg', ntc: "La información básica de los participantes está completa."} %>
<% else %>
	<%= render partial: '0p/ntc', locals: {color: 'danger', gly: 'bug', ntc: "La información básica de los participantes está incompleta."} %>
<% end %>