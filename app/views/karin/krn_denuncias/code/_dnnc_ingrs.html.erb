<!-- FECHAS -->
<%= render partial: '0p/actv_bx/f_and_a', locals: {objeto: ownr, code: 'fecha', accn: 'Fecha'} %>

<% if ownr.drv_dt? %>
	<%= render partial: '0p/actv_bx/f_and_a', locals: {objeto: ownr, code: 'fecha_dt', accn: 'Fecha'} %>
<% end %>

<!-- CAMPOS INICIALES -->
<% if ownr.fecha? %>
	<!-- RECIBIDA POR EMPRESA EXTERNA -->
	<% if ownr.rcp_externa? %>
		<%= render partial: '0p/actv_bx/f_and_a', locals: {objeto: ownr, code: 'externa_id', accn: 'Selección', trsh: (not ownr.krn_empresa_externa?), prmpt: 'Empresa'} %>
	<% end %>

	<%= render partial: '0p/actv_bx/f_and_a', locals: {objeto: ownr, code: 'via', accn: 'Radio'} %>

	<% if ownr.via_declaracion? %>
		<%= render partial: '0p/actv_bx/f_and_a', locals: {objeto: ownr, code: 'tipo', accn: 'Radio'} %>
	<% end %>

	<% if ownr.tipo_declaracion? %>
		<%= render partial: '0p/actv_bx/f_and_a', locals: {objeto: ownr, code: 'presentada', accn: 'Radio'} %>
	<% end %>

	<% if ownr.presentado_por? and ownr.activa_representante? %>
		<%= render partial: '0p/actv_bx/f_and_a', locals: {objeto: ownr, code: 'representante', accn: 'Selección'} %>
	<% end %>
<% end %>