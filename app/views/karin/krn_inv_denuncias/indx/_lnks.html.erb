<div class="d-flex justify-content-end gap-1 text-dark">
<% if prtl?(@objeto, 'hlp', 'invstgdrs') %>
	<%= render layout: '0p/mdl/link', locals: {cdg: "hlp_invstgdrs", tltp: 'Ayuda acerca del registro de asignación de investigador'} do %>
		<i class="bi bi-question-circle"></i>
	<% end %>
<% end %>

<% unless @objeto.fecha_trmn? %>
	<% if @objeto.objcn_acogida and @objeto.krn_investigadores.count == 1 %>
		<%= render partial: '0p/niler', locals: {objeto: @objeto, tkn: :objcn_acogida, tltp: 'Borrar opción de objeción acogida'} %>
	<% end %>
	<% if @objeto.objcn_rechazada %>
		<%= render partial: '0p/niler', locals: {objeto: @objeto, tkn: :objcn_rechazada, tltp: 'Borrar opción de objeción rechazada'} %>
	<% end %>
<% end %>

<% if @objeto.krn_investigadores.count == 0 or ( @objeto.krn_investigadores.count == 1 and @objeto.objcn_acogida ) %>
	<%= render partial: '0p/tbl/lnk_new', locals: {source: 'krn_inv_denuncias', blngs: @objeto} %>
<% end %>
</div>