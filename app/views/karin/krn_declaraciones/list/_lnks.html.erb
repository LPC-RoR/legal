<% if objeto.pdf_registros.empty? and (not objeto.tiene_check_realizado?) %>
	<% if objeto.ownr.articulo_516 %>
		<%= render layout: '0p/tltp_lnk', locals: {lnk: "/krn_reportes/generate_and_store_report?oclss=#{objeto.class.name}&oid=#{objeto.id}&rprt=dclrcn", data: {turbo_method: :get, turbo_confirm: 'Confirmar envío de email'}} do %>
			<i class="bi bi-archive"></i>
		<% end %>
	<% else %>
		<%= render layout: '0p/tltp_lnk', locals: {lnk: "/krn_reportes/generate_and_send_report?oid=#{objeto.id}&rprt=dclrcn", data: {turbo_method: :get, turbo_confirm: 'Confirmar envío de email'}} do %>
			<i class="bi bi-envelope-at"></i>
		<% end %>
	<% end %>

	<small><%= render partial: '0p/tbl/lnks_e', locals: {objeto: objeto} %></small>
<% else %>
	<i class="bi bi-check2-all"></i>
<% end %>