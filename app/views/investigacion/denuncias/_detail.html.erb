<div class='form-row'>
	<%= render partial: '0p/frm_flds/datetime', locals: { form: form, token: :fecha_hora, label: 'Fecha y hora denuncia' } %>
	<%= render partial: '0p/frm_flds/select_id', locals: { form: form, token: :cliente_id, colection: Cliente.where(estado: 'activo').order(:razon_social).collect { |cliente| [cliente.razon_social, cliente.id] }, display_field: 'cliente', prompt: nil, label: 'Cliente' } %>
	<%= render partial: '0p/frm_flds/select_id', locals: { form: form, token: :receptor_denuncia_id, colection: ReceptorDenuncia.all.order(:receptor_denuncia).collect { |rd| [rd.receptor_denuncia, rd.id] }, display_field: 'receptor_denuncia', prompt: nil, label: 'Receptor de denuncia' } %>
	<%= render partial: '0p/frm_flds/select_id', locals: { form: form, token: :alcance_denuncia_id, colection: AlcanceDenuncia.all.order(:alcance_denuncia).collect { |ad| [ad.alcance_denuncia, ad.id] }, display_field: 'alcance_denuncia', prompt: nil, label: 'Alcance de denuncia' } %>
	<%= render partial: '0p/frm_flds/select_id', locals: { form: form, token: :motivo_denuncia_id, colection: MotivoDenuncia.all.order(:motivo_denuncia).collect { |md| [md.motivo_denuncia, md.id] }, display_field: 'motivo_denuncia', prompt: nil, label: 'Motivo de denuncia' } %>

	<%= render partial: '0p/frm_flds/select_id', locals: { form: form, token: :dependencia_denunciante_id, colection: DependenciaDenunciante.all.order(:dependencia_denunciante).collect { |dd| [dd.dependencia_denunciante, dd.id] }, display_field: 'dependencia_denunciante', prompt: nil, label: 'Dependencia del denunciante' } %>
</div>
<div class='form-row'>
	<%= render partial: '0p/frm_flds/check_box', locals: { form: form, token: :denuncia_presencial, label: 'Denuncia presencial' } %>
	<%= render partial: '0p/frm_flds/check_box', locals: { form: form, token: :denuncia_verbal, label: 'Denuncia Verbal' } %>
</div>
<hr>
<%= render partial: '0p/frm_flds/text', locals: { form: form, token: :representante, label: 'Representante' } %>
<%= render partial: '0p/frm_flds/text', locals: { form: form, token: :rut, label: 'RUT Denunciante' } %>
<%= render partial: '0p/frm_flds/text', locals: { form: form, token: :denunciante, label: 'Denunciante' } %>
<%= render partial: '0p/frm_flds/email', locals: { form: form, token: :email, label: 'email' } %>

<div class="formCell">
		<%#= render partial: '0p/form_fields/check_box', locals: { form: form, token: :en_cobranza, label: 'En cobranza' } %>
</div>

