<h4><%= render partial: '0p/general/icon_text', locals: {gly: 'file-text', text: "Consultoría : #{@objeto.consultoria}", clr: cfg_color[:app]} %></h4>

<%= render partial: 'st_estados/st_estados/partials/change_state', locals: {objeto: @objeto} %></br></br>

<%= render partial: '0p/tabs/tabs', locals: { token: :menu } %>

<% if @options[:menu] == 'Facturacion' %>

	<%= render partial: 'consultorias/partials/facturacion' %>

<% elsif @options[:menu] == 'Registro' %>

	<%= render partial: '0p/tabla/tabla', locals: {c: 'registros'} %>
	<%= render partial: '0p/tabla/ext_btn_nuevo', locals: {o: @objeto ,c: 'registros', gly: 'plus-circle', clr: color('consultorias')} %>

<% elsif @options[:menu] == 'Reportes' %>

	<%= render partial: '0p/tabla/tabla', locals: {c: 'reg_reportes'} %>
	<%= render partial: '0p/general/btn_proceso', locals: {texto: 'Proceso Registros', link: "/consultorias/#{@objeto.id}/procesa_registros", gly: 'clipboard-check' , clr: color(@objeto.class.name.tableize), delete: false} %>

<% elsif @options[:menu] == 'Documentos y enlaces' %>

	<div class='row'>
		<div class='col-md-6'>
			<h5><%= render partial: '0p/general/icon_text', locals: {gly: 'archive', text: 'Repositorio de la consultoría', clr: cfg_color[:app]} %></h5>

		    <%= render partial: 'repositorios/app_directorios/partials/directorio', locals: {objeto: @objeto.repo} %>
		</div>
		<div class='col-md-6'>
			<h5><%= render partial: '0p/general/icon_text', locals: {gly: 'archive', text: 'Enlaces de la consultoría', clr: cfg_color[:app]} %></h5>

			<%= render partial: '0p/tabla/tabla', locals: {c: 'app_enlaces'} %>
		</div>
	</div>

<% end %>

