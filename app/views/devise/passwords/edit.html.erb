<div class='row justify-content-center'>
  <div class='col-md-4'>
    <div class="devise-box">
      <h4>Modificar su Contraseña</h4>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <%= f.hidden_field :reset_password_token %>

        <div class="field">
          <small><%= f.label 'contraseña', "Nueva contraseña" %></small><br />
          <% if @minimum_password_length %>
            <small><em>(<%= @minimum_password_length %> caracteres mínimo)</em></small><br />
          <% end %>
          <%= f.password_field :password, autofocus: true, autocomplete: "new-password" %>
        </div>

        </br>

        <div class="field">
          <small><%= f.label 'confirmación de contraseña', "Confirmar nueva contraseña" %></small>
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>

        </br>

        <div class="actions">
          <%= f.submit "Modificar mi contraseña" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>